<?xml version="1.0" encoding="UTF-8"?>
<Frame xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="Next2.Controls.CustomSelectedButton"
       x:Name="customSelectedButton">

    <Frame.Triggers>

        <DataTrigger
            Binding="{Binding IsSelected, Source={x:Reference customSelectedButton}}"
            Value="True" 
            TargetType="Frame">

            <Setter 
                Property="BackgroundColor"
                Value="{Binding SelectedBackgroundColor, Source={x:Reference customSelectedButton}}" />

            <Setter
                Property="BorderColor"
                Value="{Binding SelectedBorderColor, Source={x:Reference customSelectedButton}}" />

        </DataTrigger>

    </Frame.Triggers>

    <Label
        Text="{Binding Text, Source={x:Reference customSelectedButton}}"
        TextColor="{Binding TextColor, Source={x:Reference customSelectedButton}}"
        FontSize="{Binding FontSize, Source={x:Reference customSelectedButton}}"
        FontFamily="{Binding FontFamily, Source={x:Reference customSelectedButton}}"
        HorizontalTextAlignment="Center"
        VerticalTextAlignment="Center"/>

</Frame>