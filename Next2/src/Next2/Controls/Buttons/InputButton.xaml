<?xml version="1.0" encoding="UTF-8"?>
<controls:CustomFrame
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:controls="clr-namespace:Next2.Controls"
    xmlns:buttons="clr-namespace:Next2.Controls.Buttons"
    Padding="4"
    BorderWidth="1"
    HasShadow="False"
    BorderColor="{DynamicResource TextAndBackgroundColor_i2}" 
    CornerRadius="{OnPlatform Android='5', iOS='8'}"
    BackgroundColor="{DynamicResource TextAndBackgroundColor_i3}"
    x:Class="Next2.Controls.Buttons.InputButton">

    <StackLayout Orientation="Horizontal">

        <Label
            Text="{Binding Text, Source={RelativeSource AncestorType={x:Type buttons:InputButton}}}"
            FontSize="{Binding FontSize, Source={RelativeSource AncestorType={x:Type buttons:InputButton}}}" 
            VerticalTextAlignment="Center"
            HorizontalTextAlignment="Start"
            TextColor="{Binding TextColor, Source={RelativeSource AncestorType={x:Type buttons:InputButton}}}"       
            Margin="4, 0, 0, 0"
            FontFamily="Barlow-Medium"
            HorizontalOptions="FillAndExpand"
            IsVisible="{Binding Text, Source={RelativeSource AncestorType={x:Type buttons:InputButton}}, Converter={xct:IsNotNullOrEmptyConverter}}"/>

        <Label
            Text="{xct:Translate TypeEmployeeId}"
            FontSize="{Binding FontSize, Source={RelativeSource AncestorType={x:Type buttons:InputButton}}}" 
            VerticalTextAlignment="Center"
            HorizontalTextAlignment="Start"
            TextColor="{Binding TextColor, Source={RelativeSource AncestorType={x:Type buttons:InputButton}}}" 
            Opacity="{DynamicResource OpacityWhenDisabled_i1}"
            Margin="4, 0, 0, 0"
            FontFamily="Barlow-Medium"
            HorizontalOptions="FillAndExpand"
            IsVisible="{Binding Text, Source={RelativeSource AncestorType={x:Type buttons:InputButton}}, Converter={xct:IsNullOrEmptyConverter}}"/>

        <ffimageloading:CachedImage 
            Source="{Binding LeftImagePath, Source={RelativeSource AncestorType={x:Type buttons:InputButton}}}"
            IsVisible="{Binding IsLeftImageVisible, Source={RelativeSource AncestorType={x:Type buttons:InputButton}}}"  
            HeightRequest="24"
            Margin="0, 5, 5, 5"
            HorizontalOptions="End"/>

    </StackLayout>

    <controls:CustomFrame.GestureRecognizers>

        <TapGestureRecognizer Command="{Binding TapGestureRecognizerCommand, Source={RelativeSource AncestorType={x:Type buttons:InputButton}}}"/>

    </controls:CustomFrame.GestureRecognizers>

</controls:CustomFrame>