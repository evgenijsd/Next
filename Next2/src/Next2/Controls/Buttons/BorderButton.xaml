<?xml version="1.0" encoding="UTF-8"?>
<controls:CustomFrame
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Next2.Controls"
    xmlns:buttons="clr-namespace:Next2.Controls.Buttons"
    HasShadow="False"
    CornerRadius="5"
    BackgroundColor="Transparent"
    x:Class="Next2.Controls.Buttons.BorderButton">

    <controls:CustomFrame.GestureRecognizers>
        <TapGestureRecognizer
            Command="{Binding Command, Source={RelativeSource AncestorType={x:Type buttons:BorderButton}}}"
            CommandParameter="{Binding CommandParameter, Source={RelativeSource AncestorType={x:Type buttons:BorderButton}}}"/>
        
    </controls:CustomFrame.GestureRecognizers>
    
    <Label
        Text="{Binding Text, Source={RelativeSource AncestorType={x:Type buttons:BorderButton}}}"
        TextColor="{Binding TextColor, Source={RelativeSource AncestorType={x:Type buttons:BorderButton}}}"
        FontSize="{Binding FontSize, Source={RelativeSource AncestorType={x:Type buttons:BorderButton}}}"
        FontFamily="{Binding FontFamily, Source={RelativeSource AncestorType={x:Type buttons:BorderButton}}}"
        HorizontalTextAlignment="Center"
        VerticalTextAlignment="Center" 
        WidthRequest="100"
        MinimumWidthRequest="100"/>

</controls:CustomFrame>