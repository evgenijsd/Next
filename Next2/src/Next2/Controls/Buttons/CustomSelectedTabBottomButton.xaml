<?xml version="1.0" encoding="UTF-8"?>
<StackLayout xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Next2.Controls.CustomSelectedTabBottomButton"
             x:Name="customSelectedTabBottomButton"
             Orientation="Vertical">

    <StackLayout.Triggers>

        <DataTrigger 
            Binding="{Binding IsSelected, Source={x:Reference customSelectedTabBottomButton}}"
            Value="True" 
            TargetType="StackLayout">

            <Setter 
                Property="BackgroundColor"
                Value="{Binding SelectedBackgroundColor, Source={x:Reference customSelectedTabBottomButton}}" />

        </DataTrigger>

    </StackLayout.Triggers>
    
    <BoxView HeightRequest="3">

        <BoxView.Triggers>

            <DataTrigger
                Binding="{Binding IsSelected, Source={x:Reference customSelectedTabBottomButton}}"
                Value="True" 
                TargetType="BoxView">

                <Setter
                    Property="BackgroundColor"
                    Value="{Binding SelectedBorderColor, Source={x:Reference customSelectedTabBottomButton}}" />

            </DataTrigger>

        </BoxView.Triggers>

    </BoxView>

    <Label
        Text="{Binding Text, Source={x:Reference customSelectedTabBottomButton}}"
        TextColor="{Binding TextColor, Source={x:Reference customSelectedTabBottomButton}}"
        FontSize="{Binding FontSize, Source={x:Reference customSelectedTabBottomButton}}"
        FontFamily="{Binding FontFamily, Source={x:Reference customSelectedTabBottomButton}}"
        HorizontalTextAlignment="Center"
        VerticalTextAlignment="Center"/>

</StackLayout>