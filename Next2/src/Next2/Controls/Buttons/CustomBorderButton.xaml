<?xml version="1.0" encoding="UTF-8"?>
<Frame xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="Next2.Controls.Buttons.CustomBorderButton"
       x:Name="customBorderButton">

    <Label
        Text="{Binding Text, Source={x:Reference customBorderButton}}"
        TextColor="{Binding TextColor, Source={x:Reference customBorderButton}}"
        FontSize="{Binding FontSize, Source={x:Reference customBorderButton}}"
        FontFamily="{Binding FontFamily, Source={x:Reference customBorderButton}}"
        HorizontalTextAlignment="Center"
        VerticalTextAlignment="Center"/>

</Frame>