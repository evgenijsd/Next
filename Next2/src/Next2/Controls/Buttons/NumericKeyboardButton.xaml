<?xml version="1.0" encoding="UTF-8"?>
<controls:CustomFrame  
    xmlns:controls="clr-namespace:Next2.Controls"
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:buttons="clr-namespace:Next2.Controls.Buttons" 
    x:Class="Next2.Controls.Buttons.NumericKeyboardButton"
    CornerRadius="{OnPlatform Android='5', iOS='8'}"
    Padding="4"
    BorderWidth="3"
    HasShadow="False"
    BorderColor="{DynamicResource TextAndBackgroundColor_i2}"
    BackgroundColor="{DynamicResource TextAndBackgroundColor_i3}">

    <Label 
        x:Name="buttonTitle"
        Text="{Binding Source={RelativeSource AncestorType={x:Type buttons:NumericKeyboardButton}}, Path=Title}"
        HorizontalTextAlignment="Center"
        VerticalTextAlignment="Center"
        BackgroundColor="{DynamicResource TextAndBackgroundColor_i3}"
        FontSize="{DynamicResource TSize_i4_5}"
        TextColor="{DynamicResource TextAndBackgroundColor_i1}"
        FontFamily="Barlow-Bold"/>
    
    <controls:CustomFrame.GestureRecognizers>
    
        <TapGestureRecognizer 
            Command="{Binding Source={RelativeSource AncestorType={x:Type buttons:NumericKeyboardButton}}, Path=TabGestureRecognizerCommand}"
            CommandParameter="{x:Reference buttonTitle}"/>
    
    </controls:CustomFrame.GestureRecognizers>

</controls:CustomFrame>