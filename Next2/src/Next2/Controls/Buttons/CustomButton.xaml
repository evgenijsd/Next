<?xml version="1.0" encoding="UTF-8"?>
<Grid
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    xmlns:controls="clr-namespace:Next2.Controls"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    x:DataType="controls:CustomButton"
    MinimumWidthRequest="100"
    HeightRequest="45"
    x:Class="Next2.Controls.CustomButton">

    <Frame
        BorderColor="{Binding Source={RelativeSource AncestorType={x:Type controls:CustomButton}}, Path=BorderColor}"
        BackgroundColor="{Binding Source={RelativeSource AncestorType={x:Type controls:CustomButton}}, Path=BackColor}"
        CornerRadius="{Binding Source={RelativeSource AncestorType={x:Type controls:CustomButton}}, Path=CornerRadius}"
        VerticalOptions="FillAndExpand">
    </Frame>

    <Label
        HorizontalOptions="CenterAndExpand"
        VerticalOptions="Center"
        IsVisible="{Binding Source={RelativeSource AncestorType={x:Type controls:CustomButton}}, Path=IsVisibleSearch, Converter={xct:InvertedBoolConverter}}"
        Text="{Binding Source={RelativeSource AncestorType={x:Type controls:CustomButton}}, Path=Text}"
        TextColor="{Binding Source={RelativeSource AncestorType={x:Type controls:CustomButton}}, Path=TextColor}"
        FontSize="{DynamicResource TSize_i7}"
        FontFamily="Barlow-Medium" />

    <Label
        HorizontalOptions="CenterAndExpand"
        VerticalOptions="Center"
        Text="_________"
        TextColor="Transparent"
        FontSize="{DynamicResource TSize_i7}"
        FontFamily="Barlow-Medium" />

    <Label
        Text="{Binding Source={RelativeSource AncestorType={x:Type controls:CustomButton}}, Path=Text}"
        IsVisible="{Binding Source={RelativeSource AncestorType={x:Type controls:CustomButton}}, Path=IsVisibleSearch}"
        Margin="10,0,50,0"
        FontSize="13"
        FontFamily="Barlow-Regular"
        TextColor="{Binding Source={RelativeSource AncestorType={x:Type controls:CustomButton}}, Path=TextColor}"
        Opacity="{Binding Source={RelativeSource AncestorType={x:Type controls:CustomButton}}, Path=OpacityText}"
        VerticalOptions="Center"
        HorizontalOptions="FillAndExpand"
        LineBreakMode="TailTruncation">
        
        <Label.GestureRecognizers>
            <TapGestureRecognizer
                Command="{Binding Source={RelativeSource AncestorType={x:Type controls:CustomButton}}, Path=CommandSearch}" />
        </Label.GestureRecognizers>
    </Label>

    <ffimageloading:CachedImage
        Source="{Binding Source={RelativeSource AncestorType={x:Type controls:CustomButton}}, Path=ImageSource}"
        IsVisible="{Binding Source={RelativeSource AncestorType={x:Type controls:CustomButton}}, Path=IsVisibleSearch}"
        HeightRequest="20"
        Margin="0,0,10,0"
        VerticalOptions="CenterAndExpand"
        HorizontalOptions="EndAndExpand">

        <ffimageloading:CachedImage.GestureRecognizers>
            <TapGestureRecognizer
                Command="{Binding Source={RelativeSource AncestorType={x:Type controls:CustomButton}}, Path=CommandClear}" />
        </ffimageloading:CachedImage.GestureRecognizers>
    </ffimageloading:CachedImage>
</Grid>