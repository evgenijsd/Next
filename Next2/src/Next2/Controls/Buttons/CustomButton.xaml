<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      x:Name="customButton"
      x:Class="Next2.Controls.CustomButton">

    <Frame HasShadow="False"
           Grid.Row="0"
           BorderColor="{Binding BorderColor, Source={x:Reference customButton}}"
           BackgroundColor="{Binding BackColor, Source={x:Reference customButton}}"
           CornerRadius="{Binding CornerRadius, Source={x:Reference customButton}}" 
           VerticalOptions="FillAndExpand"/>

    <Label Grid.Column="0"
           HorizontalOptions="CenterAndExpand"
           VerticalOptions="CenterAndExpand"
           Text="{Binding Text, Source={x:Reference customButton}}"
           TextColor="{Binding TextColor, Source={x:Reference customButton}}"
           FontSize="{DynamicResource tsize_i8}"
           Style="{DynamicResource BaseContent_i1}" />
    
    <Label Grid.Column="0"
           HorizontalOptions="CenterAndExpand"
           VerticalOptions="CenterAndExpand"
           Text="________"
           TextColor="Transparent"
           FontSize="{DynamicResource tsize_i8}"
           Style="{DynamicResource BaseContent_i1}" />
</Grid>