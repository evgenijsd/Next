                <Setter Property="HeightRequest" Value="{Binding CellFrameRequest, Source={x:Reference calendar}}" />

                <Setter Property="WidthRequest" Value="{Binding CellFrameRequest, Source={x:Reference calendar}}" />

                <Setter Property="CornerRadius" Value="45" />

                <Setter Property="VerticalOptions" Value="CenterAndExpand" />

