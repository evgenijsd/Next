<?xml version="1.0" encoding="UTF-8"?>
<Frame
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Next2.Controls.CustomSelectedButton"
    x:Name="customSelectedButton">

    <Frame.Triggers>

        <DataTrigger
            Binding="{Binding IsSelected, Source={x:Reference customSelectedButton}}"
            Value="True" 
            TargetType="Frame">

            <Setter 
                Property="BackgroundColor"
                Value="#AB3821" />

            <Setter
                Property="BorderColor"
                Value="#F45E49" />

        </DataTrigger>

        <DataTrigger
            Binding="{Binding IsSelected, Source={x:Reference customSelectedButton}}"
            Value="False"
            TargetType="Frame">

            <Setter
                Property="BackgroundColor" 
                Value="#2E3143" />

            <Setter
                Property="BorderColor"
                Value="#2E3143" />

        </DataTrigger>

    </Frame.Triggers>

    <Label
        Text="{Binding Title, Source={x:Reference customSelectedButton}}"
        TextColor="White"
        FontSize="Caption"
        HorizontalTextAlignment="Center"/>

</Frame>             