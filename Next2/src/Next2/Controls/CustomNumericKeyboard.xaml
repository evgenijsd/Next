<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Next2.Controls.CustomNumericKeyboard"
             x:Name="customNumericKeyboard">
    <ContentView.Content>
        
        <StackLayout Orientation="Vertical"
                     BackgroundColor="{DynamicResource textAndbackgroundcolor_i3}">

            <Label Text="Employee ID"
                   Style="{DynamicResource BaseContent_i1}"
                   FontSize="24"
                   HeightRequest="35"
                   Margin="40, 160, 0, 0"
                   TextColor="{DynamicResource textAndbackgroundcolor_i1}">
            </Label>


            <Frame Margin="40, 0, 40, 25"
                   CornerRadius="8"
                   Padding="0"
                   HasShadow="False"
                   BorderColor="{DynamicResource textAndbackgroundcolor_i2}">

                <Frame BackgroundColor="{DynamicResource textAndbackgroundcolor_i3}"
                       BorderColor="{DynamicResource textAndbackgroundcolor_i3}"
                       Padding="0"
                       HeightRequest="50"
                       Margin="1"
                       CornerRadius="8"
                       HasShadow="False">

                    <Label Text="{Binding EmployeeId, Source={x:Reference customNumericKeyboard} }"
                           Style="{DynamicResource BaseContent_i4}"
                           TextColor="{DynamicResource textAndbackgroundcolor_i1}"
                           Margin="15, 8, 0, 8"
                           FontSize="24">
                    </Label>

                </Frame>

            </Frame>

            <Grid Margin="40, 0, 40, 0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="0.25*"/>
                    <RowDefinition Height="0.25*"/>
                    <RowDefinition Height="0.25*"/>
                    <RowDefinition Height="0.25*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.33*"/>
                    <ColumnDefinition Width="0.33*"/>
                    <ColumnDefinition Width="0.33*"/>
                </Grid.ColumnDefinitions>

                <Frame Grid.Column="0"
                       Grid.Row="0"
                       CornerRadius="8"
                       Padding="0"
                       HasShadow="False"
                       BorderColor="{DynamicResource textAndbackgroundcolor_i2}">

                    <Frame BackgroundColor="{DynamicResource textAndbackgroundcolor_i3}"
                           BorderColor="{DynamicResource textAndbackgroundcolor_i3}"
                           Padding="0"
                           HeightRequest="50"
                           Margin="1"
                           CornerRadius="4"
                           HasShadow="False">

                        <Label x:Name="button1"
                               Text="10"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"
                               BackgroundColor="{DynamicResource textAndbackgroundcolor_i3}"
                               Style="{DynamicResource BaseContent_i2}"
                               FontSize="24"
                               TextColor="{DynamicResource textAndbackgroundcolor_i1}">

                            <Label.GestureRecognizers>

                                <TapGestureRecognizer Command="{Binding ButtonTabCommand, Source={x:Reference customNumericKeyboard}}"
                                                      CommandParameter="{x:Reference button1}"/>
                            </Label.GestureRecognizers>
                            
                        </Label>


                    </Frame>

                </Frame>

                <Frame Grid.Column="1"
                       Grid.Row="0"
                       CornerRadius="8"
                       Padding="0"
                       HasShadow="False"
                       BorderColor="{DynamicResource textAndbackgroundcolor_i2}">
                       
                    <Frame BackgroundColor="{DynamicResource textAndbackgroundcolor_i3}"
                           BorderColor="{DynamicResource textAndbackgroundcolor_i3}"
                           Padding="0"
                           HeightRequest="50"
                           Margin="1"
                           CornerRadius="8"
                           HasShadow="False">

                        <Label x:Name="button2"
                               Text="2"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"
                               BackgroundColor="{DynamicResource textAndbackgroundcolor_i3}"
                               Style="{DynamicResource BaseContent_i2}"
                               FontSize="24"
                               TextColor="{DynamicResource textAndbackgroundcolor_i1}">
                            
                            <Label.GestureRecognizers>

                                <TapGestureRecognizer Command="{Binding ButtonTabCommand, Source={x:Reference customNumericKeyboard}}"
                                                      CommandParameter="{x:Reference button2}"/>
                            </Label.GestureRecognizers>
                            
                        </Label>

                    </Frame>

                </Frame>

                <Frame Grid.Column="2"
                       Grid.Row="0"
                       CornerRadius="8"
                       Padding="0"
                       HasShadow="False"
                       BorderColor="{DynamicResource textAndbackgroundcolor_i2}">
                       
                    <Frame BackgroundColor="{DynamicResource textAndbackgroundcolor_i3}"
                           BorderColor="{DynamicResource textAndbackgroundcolor_i3}"
                           Padding="0"
                           HeightRequest="50"
                           Margin="1"
                           CornerRadius="8"
                           HasShadow="False">

                        <Label x:Name="button3"
                               Text="3"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"
                               BackgroundColor="{DynamicResource textAndbackgroundcolor_i3}"
                               Style="{DynamicResource BaseContent_i2}"
                               FontSize="24"
