                               BackgroundColor="{DynamicResource textAndbackgroundcolor_i3}"
                               Style="{DynamicResource BaseContent_i2}"
                               FontSize="24"
                               TextColor="{DynamicResource textAndbackgroundcolor_i1}">

                            <Label.GestureRecognizers>

                                <TapGestureRecognizer Command="{Binding ButtonTabCommand, Source={x:Reference customNumericKeyboard}}"
                                                      CommandParameter="{x:Reference button9}"/>
                            </Label.GestureRecognizers>

                        </Label>

                    </Frame>

                </Frame>

                <Frame Grid.Column="0"
                       Grid.Row="3"
                       CornerRadius="8"
                       Padding="0"
                       HasShadow="False"
                       BorderColor="{DynamicResource textAndbackgroundcolor_i2}">
                       
                    <Frame BackgroundColor="{DynamicResource textAndbackgroundcolor_i3}"
                           BorderColor="{DynamicResource textAndbackgroundcolor_i3}"
                           Padding="0"
                           HeightRequest="50"
                           Margin="1"
                           CornerRadius="8"
                           HasShadow="False">

                        <Label x:Name="buttonZero"
                               Text="0"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"
                               BackgroundColor="{DynamicResource textAndbackgroundcolor_i3}"
                               Style="{DynamicResource BaseContent_i2}"
                               FontSize="24"
                               TextColor="{DynamicResource textAndbackgroundcolor_i1}">

                            <Label.GestureRecognizers>

                                <TapGestureRecognizer Command="{Binding ButtonTabCommand, Source={x:Reference customNumericKeyboard}}"
                                                      CommandParameter="{x:Reference buttonZero}"/>
                            </Label.GestureRecognizers>

                        </Label>

                    </Frame>
                </Frame>

                <Frame Grid.Column="1"
                       Grid.Row="3"
                       Grid.ColumnSpan="2"
                       CornerRadius="8"
                       Padding="0"
                       HasShadow="False"
                       BorderColor="{DynamicResource textAndbackgroundcolor_i2}">
                       
                    <Frame BackgroundColor="{DynamicResource textAndbackgroundcolor_i3}"
                           BorderColor="{DynamicResource textAndbackgroundcolor_i3}"
                           Padding="0"
                           HeightRequest="50"
                           Margin="1"
                           CornerRadius="8"
                           HasShadow="False">

                        <Label Text="Clear"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"
                               Style="{DynamicResource BaseContent_i1}"
                               FontSize="22"
                               TextColor="White">
                            
                            <Label.GestureRecognizers>

                                <TapGestureRecognizer Command="{Binding ButtonClearTabCommand, Source={x:Reference customNumericKeyboard}}"
                                                      CommandParameter="{x:Reference buttonZero}"/>
                            </Label.GestureRecognizers>
                            
                        </Label>
                               
                    </Frame>
                </Frame>

            </Grid>

            <BoxView Margin="0, 100, 0, 0"
                     HeightRequest="1"
                     Color="{DynamicResource textAndbackgroundcolor_i2}">

            </BoxView>

            <Frame HasShadow="False"
                   CornerRadius="8"
                   Margin="25, 25, 25, 25"
                   BackgroundColor="{DynamicResource indicationcolor_i1}">
                
                <Label Text="Login"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       TextColor="{DynamicResource textAndbackgroundcolor_i3}"
                       Style="{DynamicResource BaseContent_i1}"
                       FontSize="18">
                       
                    <Label.GestureRecognizers>

                        <TapGestureRecognizer Command="{Binding ButtonClearTabCommand, Source={x:Reference customNumericKeyboard}}"/>
                        
                    </Label.GestureRecognizers>

                </Label>

            </Frame>
            

        </StackLayout>
        
    </ContentView.Content>
    
</ContentView>