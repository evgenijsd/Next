                               FontSize="24"
                               TextColor="{DynamicResource textAndbackgroundcolor_i1}">

                            <Label.GestureRecognizers>

                                <TapGestureRecognizer Command="{Binding ButtonTabCommand, Source={x:Reference customNumericKeyboard}}"
                                                      CommandParameter="{x:Reference button8}"/>
                            </Label.GestureRecognizers>

                        </Label>

                    </Frame>

                </Frame>

                <Frame Grid.Column="2"
                       Grid.Row="2"
                       CornerRadius="8"
                       Padding="0"
                       HasShadow="False"
                       BorderColor="{DynamicResource textAndbackgroundcolor_i2}">
                       
                    <Frame BackgroundColor="{DynamicResource textAndbackgroundcolor_i3}"
                           BorderColor="{DynamicResource textAndbackgroundcolor_i3}"
                           Padding="0"
                           HeightRequest="50"
                           Margin="1"
                           CornerRadius="8"
                           HasShadow="False">

                        <Label x:Name="button9"
                               Text="9"
                               HorizontalTextAlignment="Center"
