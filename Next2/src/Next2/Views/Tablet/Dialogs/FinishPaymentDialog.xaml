<?xml version="1.0" encoding="utf-8" ?>
<rg:PopupPage
    x:Class="Next2.Views.Tablet.Dialogs.FinishPaymentDialog"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pcView="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    xmlns:rg="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup">

    <rg:PopupPage.Resources>
        <Style x:Key="separatorStyle" TargetType="BoxView">
            <Setter Property="BackgroundColor" Value="#424861" />
            <Setter Property="HeightRequest" Value="2" />
            <Setter Property="HorizontalOptions" Value="FillAndExpand" />
            <Setter Property="VerticalOptions" Value="End" />
        </Style>
        <Style x:Key="buttonStyle" TargetType="Frame">
            <Setter Property="WidthRequest" Value="126" />
            <Setter Property="HeightRequest" Value="38" />
            <Setter Property="BackgroundColor" Value="#424861" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="HasShadow" Value="False" />
        </Style>
        <Style x:Key="buttonTextStyle" TargetType="Label">
            <Setter Property="FontFamily" Value="Barlow-SemiBold" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="TextColor" Value="#FEFEFD" />
            <Setter Property="HorizontalTextAlignment" Value="Center" />
            <Setter Property="VerticalTextAlignment" Value="Center" />
        </Style>
    </rg:PopupPage.Resources>


    <pcView:PancakeView
        BackgroundColor="#34374C"
        Border="{pcView:BorderMarkup Color=#424861,
                                     Thickness={OnPlatform Android=4,
                                                           iOS=4}}"
        CornerRadius="6"
        HeightRequest="471"
        HorizontalOptions="CenterAndExpand"
        VerticalOptions="CenterAndExpand"
        WidthRequest="576">

        <Grid RowDefinitions="0.13*,0.26*,0.45*,0.16*">
            <Label
                Grid.Row="0"
                Margin="18,0,0,0"
                FontFamily="Barlow-SemiBold"
                FontSize="22"
                HorizontalOptions="Start"
                Text="Payment complete"
                TextColor="#FEFEFD"
                VerticalOptions="Center" />
            <BoxView Grid.Row="0" Style="{StaticResource separatorStyle}" />

            <StackLayout
                Grid.Row="1"
                Margin="18,0,0,0"
                HorizontalOptions="Start"
                Orientation="Vertical"
                Spacing="4"
                VerticalOptions="Center">
                <Label
                    FontFamily="Barlow-Medium"
                    Style="{StaticResource buttonTextStyle}"
                    Text="Text" />
                <Label
                    FontFamily="Barlow-Medium"
                    Style="{StaticResource buttonTextStyle}"
                    Text="Text" />
                <Label
                    FontFamily="Barlow-Medium"
                    Style="{StaticResource buttonTextStyle}"
                    Text="Text" />
                <Label
                    FontFamily="Barlow-Medium"
                    Style="{StaticResource buttonTextStyle}"
                    Text="Text" />
            </StackLayout>

            <StackLayout
                Grid.Row="1"
                Margin="0,0,18,0"
                HorizontalOptions="End"
                Orientation="Vertical"
                Spacing="4"
                VerticalOptions="Center">
                <Label Style="{StaticResource buttonTextStyle}" Text="Text" />
                <Label Style="{StaticResource buttonTextStyle}" Text="Text" />
                <Label Style="{StaticResource buttonTextStyle}" Text="Text" />
                <Label Style="{StaticResource buttonTextStyle}" Text="Text" />
            </StackLayout>

            <BoxView Grid.Row="1" Style="{StaticResource separatorStyle}" />

            <StackLayout
                Grid.Row="2"
                Margin="18,4,0,0"
                HorizontalOptions="Start"
                Orientation="Vertical"
                Spacing="9">
                <Label
                    FontFamily="Barlow-Medium"
                    Style="{StaticResource buttonTextStyle}"
                    Text="Text" />
                <Label
                    FontFamily="Barlow-Regular"
                    FontSize="18"
                    Style="{StaticResource buttonTextStyle}"
                    Text="Text" />
            </StackLayout>

            <StackLayout
                Grid.Row="2"
                Margin="0,4,18,0"
                HorizontalOptions="End"
                Orientation="Vertical"
                Spacing="9">
                <Label Style="{StaticResource buttonTextStyle}" Text="Text" />
                <Label
                    FontFamily="Barlow-Regular"
                    FontSize="18"
                    Style="{StaticResource buttonTextStyle}"
                    Text="Text" />
            </StackLayout>

            <BoxView Grid.Row="2" Style="{StaticResource separatorStyle}" />

            <!--  Buttons  -->
            <StackLayout
                Grid.Row="3"
                Margin="18,0,18,0"
                Orientation="Horizontal"
                Spacing="18"
                VerticalOptions="CenterAndExpand">
                <Frame BorderColor="#F59249" Style="{StaticResource buttonStyle}">
                    <Label Style="{StaticResource buttonTextStyle}" Text="Email" />
                </Frame>
                <Frame BorderColor="#7B61FF" Style="{StaticResource buttonStyle}">
                    <Label Style="{StaticResource buttonTextStyle}" Text="Text" />
                </Frame>
                <Frame BorderColor="#F45E49" Style="{StaticResource buttonStyle}">
                    <Label Style="{StaticResource buttonTextStyle}" Text="Print" />
                </Frame>
                <Frame BackgroundColor="#3CD47D" Style="{StaticResource buttonStyle}">
                    <Label
                        Style="{StaticResource buttonTextStyle}"
                        Text="Email"
                        TextColor="#34374C" />
                </Frame>
            </StackLayout>
        </Grid>

    </pcView:PancakeView>
</rg:PopupPage>