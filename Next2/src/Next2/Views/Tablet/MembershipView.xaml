<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Next2.Controls"
    xmlns:effects="clr-namespace:Next2.Effects"
    xmlns:enums="clr-namespace:Next2.Enums"
    xmlns:models="clr-namespace:Next2.Models"
    xmlns:tablet="clr-namespace:Next2.ViewModels.Tablet"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    x:DataType="tablet:MembershipViewModel"
    x:Class="Next2.Views.Tablet.MembershipView">

    <Grid 
        BackgroundColor="{DynamicResource TextAndBackgroundColor_i5}" 
        RowDefinitions="auto, auto, *">

        <!--  TITLE BAR  -->
        <StackLayout Grid.Row="0">

            <StackLayout
                Grid.Row="0"
                Padding="40, 20, 40, 10"
                Orientation="Horizontal">

                <!--  TITLE  -->
                <Label
                    FontFamily="Barlow-Bold"
                    FontSize="{DynamicResource TSize_i3}"
                    Text="{xct:Translate Membership}"
                    TextColor="{DynamicResource TextAndBackgroundColor_i1}"
                    VerticalOptions="Center" />

            </StackLayout>

            <BoxView 
                Grid.Row="1" 
                Style="{DynamicResource SeparatorStyle_i1}" />

        </StackLayout>

        <!--  SEARCH BUTTON  -->
        <Grid
            Grid.Row="1"
            Margin="40,35,40,20"
            ColumnDefinitions="0.37*, 0.63*"
            RowDefinitions="*">

            <controls:SearchButton
                CornerRadius="5"
                Text="{Binding SearchText}"
                Placeholder="{xct:Translate SearchByNameOrPhone}"
                TextColor="{DynamicResource TextAndBackgroundColor_i1}"
                BackColor="Transparent"
                BorderColor="{DynamicResource AppColor_i1}"
                CommandSearch="{Binding SearchCommand}"
                CommandClear="{Binding ClearSearchCommand}">

                <controls:SearchButton.Triggers>

                    <DataTrigger
                        TargetType="controls:SearchButton"
                        Binding="{Binding SearchText}"
                        Value="">
                        <Setter Property="BorderColor" Value="{DynamicResource TextAndBackgroundColor_i3}" />
                        <Setter Property="ImageSource" Value="ic_search_24x24" />
                        <Setter Property="CommandClear" Value="{Binding SearchCommand}" />
                    </DataTrigger>

                </controls:SearchButton.Triggers>
            </controls:SearchButton>
        </Grid>

        <!--  TABLE  -->
        <yummy:PancakeView
            Grid.Row="2"
            BackgroundColor="{DynamicResource TextAndBackgroundColor_i5}"
            Border="{yummy:BorderMarkup Thickness=3, Color={StaticResource TextAndBackgroundColor_i3}}"
            Margin="40,0,40,20"
            CornerRadius="{OnPlatform Android=6, iOS=8}"
            VerticalOptions="FillAndExpand"
            HorizontalOptions="FillAndExpand"
            IsVisible="false">

            <yummy:PancakeView.Triggers>

                <DataTrigger
                    TargetType="yummy:PancakeView"
                    Binding="{Binding DisplayMembers.Count}"
                    Value="0">
                    <Setter Property="IsVisible" Value="true" />
                </DataTrigger>

            </yummy:PancakeView.Triggers>

            <StackLayout>
                <ffimageloading:CachedImage
                    Source="pic_nothing_found"
                    HeightRequest="250"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center" />
            </StackLayout>

        </yummy:PancakeView>

        <yummy:PancakeView
            Grid.Row="2"
            Margin="40,0,40,20"
            BackgroundColor="{DynamicResource TextAndBackgroundColor_i8}"
            CornerRadius="{OnPlatform Android=6, iOS=8}"
            VerticalOptions="Start">

            <yummy:PancakeView.Triggers>

                <DataTrigger
                    TargetType="yummy:PancakeView"
                    Binding="{Binding AnyMembersLoaded}"
                    Value="false">
                    <Setter Property="VerticalOptions" Value="FillAndExpand" />
                </DataTrigger>

            </yummy:PancakeView.Triggers>

            <!--  TABLE HEADER  -->
            <StackLayout>
                
                <Grid
                    BackgroundColor="{DynamicResource TextAndBackgroundColor_i3}"
                    ColumnDefinitions="0.26*, 0.26*, 0.24*, 0.24*"
                    RowDefinitions="auto">

                    <StackLayout 
                        Grid.Column="0" 
                        Orientation="Horizontal"
                        xct:TouchEffect.Command="{Binding MemberSortingChangeCommand}"
                        xct:TouchEffect.CommandParameter="{x:Static enums:EMemberSorting.ByCustomerName}">

                        <Label 
                            Style="{DynamicResource TableCellStyle_i1}" 
                            Text="{xct:Translate CustomerName}" />

                        <Image Source="ic_sort_primary_24x24" />

                    </StackLayout>

                    <Label
                        Grid.Column="1"
                        Style="{DynamicResource TableCellStyle_i1}"
                        Text="{xct:Translate Phone}" />

                    <StackLayout 
                        Grid.Column="2" 
                        Orientation="Horizontal"
                        xct:TouchEffect.Command="{Binding MemberSortingChangeCommand}"
                        xct:TouchEffect.CommandParameter="{x:Static enums:EMemberSorting.ByMembershipStartTime}">

                        <Label 
                            Style="{DynamicResource TableCellStyle_i1}"
                            Text="{xct:Translate MembershipStartTime}" />

                        <Image Source="ic_sort_primary_24x24" />

                    </StackLayout>

                    <StackLayout 
                        Grid.Column="3" 
                        Orientation="Horizontal"
                        xct:TouchEffect.Command="{Binding MemberSortingChangeCommand}"
                        xct:TouchEffect.CommandParameter="{x:Static enums:EMemberSorting.ByMembershipEndTime}">

                        <Label 
                            Style="{DynamicResource TableCellStyle_i1}"
                            Text="{xct:Translate MembershipEndTime}" />

                        <Image Source="ic_sort_primary_24x24" />

                    </StackLayout>

                </Grid>

                <BoxView
                    HeightRequest="{OnPlatform Android=1.5, iOS=1}"
                    Style="{DynamicResource SeparatorStyle_i1}"
                    Color="{DynamicResource TextAndBackgroundColor_i5}" />

                <!--  TABLE CONTENT  -->                
                <RefreshView
                    Command="{Binding RefreshMembersCommand}"
                    IsRefreshing="{Binding IsMembersRefreshing}">

                    <controls:CustomScrollBarCollectionView
                        HeightRequest="{Binding DisplayMembers, Converter={StaticResource listHeightConverter}, ConverterParameter=45}"
                        Style="{DynamicResource CustomScrollBarCollectionView_i1}"
                        ItemsSource="{Binding DisplayMembers}">

                        <CollectionView.Effects>
                            
                            <effects:NoOverScrollEffect />

                            <effects:ScrollBarColorEffect
                                ScrollBarThumbWidth="6"
                                ScrollBarCornerRadius="9"
                                ScrollBarThumbColor="{StaticResource AppColor_i1}"
                                ScrollBarTrackColor="{StaticResource TextAndBackgroundColor_i2}" />
                            
                        </CollectionView.Effects>

                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout
                                    BackgroundColor="{DynamicResource TextAndBackgroundColor_i8}"
                                    x:DataType="models:MemberBindableModel">

                                    <Grid
                                        ColumnDefinitions="0.26*, 0.26*, 0.24*, 0.24*">

                                        <Label
                                            Grid.Column="0"
                                            Style="{DynamicResource TableCellStyle_i1}"
                                            Text="{Binding CustomerName}" />

                                        <Label
                                            Grid.Column="1"
                                            Style="{DynamicResource TableCellStyle_i1}"
                                            Text="{Binding Phone}" />

                                        <Label
                                            Grid.Column="2"
                                            Style="{DynamicResource TableCellStyle_i1}"
                                            Text="{Binding MembershipStartTime, Converter={x:StaticResource timeToFormattedStringConverter}}" />

                                        <Label
                                            Grid.Column="3"
                                            Style="{DynamicResource TableCellStyle_i1}"
                                            Text="{Binding MembershipEndTime, Converter={x:StaticResource timeToFormattedStringConverter}}" />

                                        <Grid.GestureRecognizers>
                                            <TapGestureRecognizer
                                                Command="{Binding TapCommand}"
                                                CommandParameter="{Binding .}" />
                                        </Grid.GestureRecognizers>

                                    </Grid>

                                    <BoxView
                                        Style="{DynamicResource SeparatorStyle_i1}"
                                        Color="{DynamicResource TextAndBackgroundColor_i5}" />

                                </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>

                    </controls:CustomScrollBarCollectionView>

                </RefreshView>
                
            </StackLayout>

        </yummy:PancakeView>

    </Grid>

</ContentView>