<?xml version="1.0" encoding="UTF-8"?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:controls="clr-namespace:Next2.Controls"
    xmlns:buttons="clr-namespace:Next2.Controls.Buttons"
    xmlns:templates="clr-namespace:Next2.Controls.Templates"
    xmlns:effects="clr-namespace:Next2.Effects"
    xmlns:models="clr-namespace:Next2.Models"
    xmlns:viewModels="clr-namespace:Next2.ViewModels.Tablet"
    x:Class="Next2.Views.Tablet.NewOrderView"
    x:DataType="viewModels:NewOrderViewModel">

    <Grid ColumnSpacing="0">

        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.4*"/>

        </Grid.ColumnDefinitions>

        <!--Left Part-->
        
        <StackLayout
            Grid.Row="0"
            Grid.Column="0"
            BackgroundColor="#212430">

            <StackLayout 
                Orientation="Horizontal"
                Padding="20"
                VerticalOptions="Start">

                <Label
                    Text="New Order"
                    TextColor="White"
                    FontSize="Large"
                    FontAttributes="Bold"/>

                <ffimageloading:CachedImage
                    Source="ic_time_circle_24x24"
                    HorizontalOptions="EndAndExpand"/>

                <Label
                    Text="9:32:45 PM"
                    TextColor="White"
                    VerticalTextAlignment="Center"/>

                <ffimageloading:CachedImage
                    Source="ic_calendar_24x24"
                    Margin="10, 0, 0, 0"/>

                <Label
                    Text="Tuesday, 21 March 2021"
                    TextColor="White"
                    VerticalTextAlignment="Center"/>

            </StackLayout>

            <BoxView
                HeightRequest="1"
                BackgroundColor="#424861"/>

            <StackLayout
                VerticalOptions="Start"
                Margin="30, 0">

                <StackLayout
                    VerticalOptions="Start"
                    Orientation="Horizontal"
                    Margin="0, 10, 0, 0">

                    <Label
                        Text="Categories"
                        TextColor="White"
                        FontAttributes="Bold"
                        VerticalTextAlignment="Center"/>

                    <Frame
                        HasShadow="False"
                        CornerRadius="5"
                        BorderColor="White"
                        BackgroundColor="#212430"
                        Padding="5"
                        HorizontalOptions="EndAndExpand">

                        <StackLayout Orientation="Horizontal">

                            <ffimageloading:CachedImage Source="ic_category_24x24"/>

                            <Label
                                Text="Expand"
                                TextColor="White"
                                FontSize="Caption"
                                VerticalTextAlignment="Center"/>

                        </StackLayout>

                    </Frame>

                </StackLayout>

                <controls:StepperCarousel
                    ItemsSource="{Binding CategoriesItems}"
                    SelectedItem="{Binding SelectedCategoryItem}"/>

                <BoxView
                    HeightRequest="1"
                    BackgroundColor="#424861"/>

            </StackLayout>

            <StackLayout
                VerticalOptions="Start"
                Orientation="Horizontal"
                Margin="0, 10, 0, 0"
                Padding="30, 0">

                <Label
                    Text="Menu"
                    TextColor="White"
                    FontAttributes="Bold"
                    VerticalTextAlignment="Center"/>

                <Frame
                    HasShadow="False"
                    CornerRadius="5"
                    BorderColor="White"
                    BackgroundColor="#212430"
                    Padding="5"
                    HorizontalOptions="EndAndExpand">

                    <StackLayout Orientation="Horizontal">

                        <ffimageloading:CachedImage Source="ic_swap_24x24"/>

                        <Label
                            Text="A-Z"
                            TextColor="White"
                            FontSize="Caption"
                            VerticalTextAlignment="Center"/>

                    </StackLayout>

                </Frame>

            </StackLayout>

            <!--Menu-->
            
            <controls:CustomScrollView
                Padding="23, 0"
                Margin="0, 0, 5, 0"
                VerticalOptions="StartAndExpand">

                <controls:CustomScrollView.Effects>
                    <effects:ScrollBarColorEffect ScrollBarColor="#F45E49"/>
                </controls:CustomScrollView.Effects>

                <FlexLayout
                    Wrap="Wrap">
                    <!--BindableLayout.ItemsSource="{Binding SetList}">-->

                    <BindableLayout.ItemTemplate>

                        <DataTemplate x:DataType="models:SetModel">

                            <StackLayout
                                BackgroundColor="#212430"
                                Padding="0, 0, 0, 10">

                                <Frame
                                    HasShadow="False"
                                    CornerRadius="5"
                                    BorderColor="Transparent"
                                    BackgroundColor="#2E3143"
                                    Margin="7, 0"
                                    Padding="10">

                                    <StackLayout>

                                        <Frame
                                            HasShadow="False"
                                            CornerRadius="5"
                                            Padding="0"
                                            BorderColor="Transparent"
                                            BackgroundColor="#2E3143">

                                            <ffimageloading:CachedImage
                                                WidthRequest="210"
                                                HeightRequest="179"
                                                Aspect="AspectFit"
                                                Source="{Binding ImagePath}"/>

                                        </Frame>

                                        <Label
                                            Text="{Binding Title}"
                                            TextColor="White"
                                            FontSize="Caption"/>

                                        <Label
                                            Text="{Binding Price}"
                                            TextColor="White"
                                            Margin="0, 10"/>

                                    </StackLayout>

                                </Frame>

                            </StackLayout>

                        </DataTemplate>

                    </BindableLayout.ItemTemplate>

                </FlexLayout>

            </controls:CustomScrollView>

            <!--Tabs Subcategories Menu-->
            
            <controls:TabsControl
                VerticalOptions="End"
                Direction="Row">
                <!--ItemsSource="{Binding TabsSubMenu}"
                SelectedItem="{Binding SelectedItemSubMenu}">-->

                <DataTemplate x:DataType="models:MenuItemBindableModel">

                    <templates:SubCategoryItemTemplate
                        WidthRequest="155"
                        IsSelected="{Binding IsSelected}"
                        Text="{Binding Title}"/>

                </DataTemplate>

            </controls:TabsControl>

        </StackLayout>

        <!--Right Part-->
        
        <Grid
            Grid.Row="0"
            Grid.Column="1"
            RowSpacing="0"
            ColumnSpacing="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>

            <!--Head-->
            <StackLayout
                Grid.Row="0"
                Grid.Column="0"
                Spacing="0"
                BackgroundColor="#34374C"
                Padding="15">

                <!--First line-->
                <StackLayout
                    Orientation="Horizontal">

                    <Label
                        Text="Order #53642"
                        TextColor="White"/>

                </StackLayout>

                <!--Second line-->
                <StackLayout
                    IsClippedToBounds="False"
                    Orientation="Horizontal">

                    <!--dropdown-->
                    <Label Text="eerr"/>

                </StackLayout>

            </StackLayout>

            <!--Center content-->
            <StackLayout
                Grid.Row="1"
                Grid.Column="0"
                Spacing="0"
                BackgroundColor="#2E3143">

                <ffimageloading:CachedImage
                    Source="pic_payment.png"
                    HorizontalOptions="Center"
                    VerticalOptions="EndAndExpand"/>

                <Label
                    Text="To create a new order,&#10; select a dish card."
                    TextColor="White"
                    VerticalOptions="StartAndExpand"
                    VerticalTextAlignment="Center"
                    HorizontalTextAlignment="Center"/>

            </StackLayout>

            <!--Footer-->
            <StackLayout
                Grid.Row="2"
                Grid.Column="0"
                Spacing="10"
                Orientation="Horizontal"
                BackgroundColor="#34374C"
                Padding="20">

                <buttons:BorderButton
                    HasShadow="False"
                    Text="Order"
                    BackgroundColor="#34374C"
                    BorderColor="#72544A"
                    HeightRequest="40"
                    Padding="25, 5"
                    CornerRadius="4"/>

                <buttons:BorderButton
                    HasShadow="False"
                    Text="Tab"
                    BackgroundColor="#34374C"
                    BorderColor="#454279"
                    HeightRequest="40"
                    Padding="25, 5"
                    CornerRadius="4"/>

                <buttons:BorderButton
                    HasShadow="False"
                    Text="Pay"
                    BackgroundColor="#4E7E62"
                    BorderColor="#4E7E62"
                    HeightRequest="40"
                    Padding="25, 5"
                    CornerRadius="4"/>

            </StackLayout>

            <Frame
                CornerRadius="5"
                HasShadow="True"
                BorderColor="Transparent"
                BackgroundColor="#2E3143"
                Grid.Row="0"
                Grid.Column="0"
                Padding="5"
                WidthRequest="100"
                Margin="250, 10, 30, -30"
                HeightRequest="100">

                <StackLayout BackgroundColor="#34374C">

                    <Label
                        Text="Table 1"
                        TextColor="White"
                        BackgroundColor="#2E3143"/>

                    <BoxView
                        Color="#212430"
                        HeightRequest="1"/>

                    <Label
                        Text="Table 2"
                        TextColor="White"/>

                    <BoxView
                        Color="#212430"
                        HeightRequest="1"/>

                    <Label
                        Text="Table 3"
                        TextColor="White"/>

                    <BoxView
                        Color="#212430"
                        HeightRequest="1"/>

                    <Label
                        Text="Table 4"
                        TextColor="White"/>

                    <BoxView
                        Color="#212430"
                        HeightRequest="1"/>

                    <Label
                        Text="Table 5"
                        TextColor="White"/>

                </StackLayout>

            </Frame>

        </Grid>

    </Grid>

</ContentView>