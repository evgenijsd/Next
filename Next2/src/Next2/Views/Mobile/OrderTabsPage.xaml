<?xml version="1.0" encoding="UTF-8"?>
<views:BaseContentPage
    xmlns:views="clr-namespace:Next2.Views"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:Next2.ViewModels"
    x:Class="Next2.Views.Mobile.OrderTabsPage"
    x:DataType="viewModels:OrderTabsViewModel"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    xmlns:controls="clr-namespace:Next2.Controls"
    BackgroundColor="{DynamicResource TextAndBackgroundColor_i3}">

    <ContentPage.Content>

        <StackLayout
            Height="{Binding HeightPage}"
            BackgroundColor="{DynamicResource TextAndBackgroundColor_i5}">

            <Grid
                RowSpacing="0">

                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="65" />
                    <RowDefinition
                        Height="55" />
                    <RowDefinition
                        Height="80" />
                    <RowDefinition
                        Height="{Binding HeightCollectionGrid}" />
                </Grid.RowDefinitions>

                <controls:CustomNavigationbar
                    Title="{xct:Translate OrderTabs}"
                    LeftButtonImageSource="ic_arrow_left_tail_40x40"
                    LeftButtonCommand="{Binding GoBackCommand}" />

                <Grid
                    Grid.Row="1"
                    Margin="0,2,0,0"
                    HorizontalOptions="Fill"
                    VerticalOptions="Fill"
                    ColumnSpacing="0"
                    ColumnDefinitions="*,*">

                    <controls:CustomButtonSwitch
                        Text="{xct:Translate Orders}"
                        Grid.Column="0"
                        CornerRadius="0"
                        VerticalOptions="FillAndExpand"
                        IsSelected="{Binding IsOrderTabsSelected}">
                        
                        <controls:CustomButtonSwitch.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ButtonOrdersCommand}" />
                        </controls:CustomButtonSwitch.GestureRecognizers>
                        
                    </controls:CustomButtonSwitch>


                    <controls:CustomButtonSwitch
                        Text="{xct:Translate Tabs}"
                        Grid.Column="1"
                        VerticalOptions="FillAndExpand"
                        CornerRadius="0"
                        IsSelected="{Binding IsOrderTabsSelected, Converter={xct:InvertedBoolConverter}}"
                        IsRight="True">
                        
                        <controls:CustomButtonSwitch.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ButtonTabsCommand}" />
                        </controls:CustomButtonSwitch.GestureRecognizers>
                        
                    </controls:CustomButtonSwitch>

                </Grid>

                <controls:CustomButton
                    Grid.Row="2"
                    CornerRadius="5"
                    IsVisibleSearch="True"
                    Text="{xct:Translate SearchTableNumber}"
                    TextColor="{DynamicResource TextAndBackgroundColor_i1}"
                    BackColor="Transparent"
                    BorderColor="{DynamicResource TextAndBackgroundColor_i3}"
                    Margin="17,20,17,20">

                    <controls:CustomButton.Triggers>
                        <DataTrigger
                            TargetType="controls:CustomButton"
                            Binding="{Binding Source={RelativeSource AncestorType={x:Type viewModels:OrderTabsViewModel}}, Path=IsOrderTabsSelected}"
                            Value="False">
                            <Setter Property="Text" Value="{xct:Translate SearchName}" />
                        </DataTrigger>
                    </controls:CustomButton.Triggers>

                </controls:CustomButton>

                <Frame
                    VerticalOptions="Start"
                    Grid.Row="3"
                    HasShadow="False"
                    CornerRadius="10"
                    BackgroundColor="{DynamicResource TextAndBackgroundColor_i3}"
                    Margin="17,0,17,0">

                    <StackLayout>
                        
                        <Grid
                            Margin="20,15,0,0"
                            VerticalOptions="Start"
                            HeightRequest="35"
                            MinimumHeightRequest="35"
                            ColumnDefinitions="*,*,*">

                            <Label
                                Grid.Column="0"
                                HorizontalOptions="FillAndExpand"
                                Text="{xct:Translate TableNumber}"
                                TextColor="{DynamicResource TextAndBackgroundColor_i1}"
                                VerticalOptions="FillAndExpand"
                                HeightRequest="{DynamicResource TSize_i8}"
                                LineBreakMode="TailTruncation"
                                FontSize="{DynamicResource TSize_i8}"
                                FontFamily="Barlow-Medium">

                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding SortByNameCommand}" />
                                </Label.GestureRecognizers>

                                <Label.Triggers>
                                    <DataTrigger
                                        TargetType="Label"
                                        Binding="{Binding Source={RelativeSource AncestorType={x:Type viewModels:OrderTabsViewModel}}, Path=IsOrderTabsSelected}"
                                        Value="False">
                                        <Setter Property="Text" Value="{xct:Translate CustomerName}" />
                                    </DataTrigger>

                                </Label.Triggers>

                            </Label>

                            <Label
                                Grid.Column="1"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="FillAndExpand"
                                HeightRequest="{DynamicResource TSize_i8}"
                                LineBreakMode="TailTruncation"
                                Text="{xct:Translate OrderNumber}"
                                TextColor="{DynamicResource TextAndBackgroundColor_i1}"
                                FontSize="{DynamicResource TSize_i8}"
                                FontFamily="Barlow-Medium">

                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding SortByOrderCommand}" />
                                </Label.GestureRecognizers>

                            </Label>

                            <Label
                                Grid.Column="2"
                                HorizontalOptions="FillAndExpand"
                                Text="{xct:Translate Total}"
                                TextColor="{DynamicResource TextAndBackgroundColor_i1}"
                                FontSize="{DynamicResource TSize_i8}"
                                FontFamily="Barlow-Medium" />

                        </Grid>

                        <BoxView
                            HorizontalOptions="FillAndExpand" 
                            VerticalOptions="StartAndExpand"
                            HeightRequest="2"
                            BackgroundColor="{DynamicResource TextAndBackgroundColor_i5}"/>

                        <RefreshView
                            VerticalOptions="Start"
                            IsRefreshing="{Binding IsOrdersRefreshing}"
                            Command="{Binding RefreshOrdersCommand}">

                            <CollectionView
                                x:Name="collectionView"
                                SelectionChanged="collectionView_SelectionChanged"
                                ItemsSource="{Binding Orders}"
                                SelectionMode="Single"
                                SelectedItem="{Binding SelectedOrder}"
                                VerticalScrollBarVisibility="Never">

                                <CollectionView.ItemTemplate>

                                    <DataTemplate
                                        x:DataType="viewModels:OrderViewModel">

                                        <Grid
                                            HorizontalOptions="Fill"
                                            VerticalOptions="Start"
                                            RowSpacing="0"
                                            RowDefinitions="48,2">

                                            <VisualStateManager.VisualStateGroups>

                                                <VisualStateGroup
                                                    Name="CommonStates">

                                                    <VisualState
                                                        Name="Normal">
                                                        <VisualState.Setters>
                                                            <Setter Property="BackgroundColor" Value="{DynamicResource TextAndBackgroundColor_i4}" />
                                                        </VisualState.Setters>
                                                    </VisualState>

                                                    <VisualState
                                                        Name="Selected">
                                                        <VisualState.Setters>
                                                            <Setter Property="BackgroundColor" Value="{DynamicResource AppColor_i4}" />
                                                        </VisualState.Setters>
                                                    </VisualState>

                                                </VisualStateGroup>

                                            </VisualStateManager.VisualStateGroups>

                                            <BoxView
                                                VerticalOptions="Start"
                                                HeightRequest="10" />

                                            <Grid
                                                Grid.Row="0"
                                                Margin="0,1,0,0"
                                                ColumnDefinitions="*,*,*">

                                                <Label
                                                    Grid.Column="0"
                                                    HorizontalOptions="FillAndExpand"
                                                    Margin="20,13,0,0"
                                                    Text="{Binding Name}"
                                                    HeightRequest="{DynamicResource TSize_i8}"
                                                    LineBreakMode="TailTruncation"
                                                    TextColor="{DynamicResource TextAndBackgroundColor_i1}"
                                                    FontSize="{DynamicResource TSize_i8}"
                                                    FontFamily="Barlow-Regular" />

                                                <Label
                                                    Grid.Column="1"
                                                    HorizontalOptions="FillAndExpand"
                                                    Margin="15,13,0,0"
                                                    Text="{Binding OrderNumber}"
                                                    FontFamily="Barlow-Regular"
                                                    FontSize="{DynamicResource TSize_i8}"
                                                    TextColor="{DynamicResource TextAndBackgroundColor_i1}" />

                                                <Label
                                                    Grid.Column="2"
                                                    Text="{Binding Total, StringFormat='$ {0:F2}'}"
                                                    HorizontalOptions="FillAndExpand"
                                                    Margin="10,13,0,0"
                                                    FontFamily="Barlow-Regular"
                                                    FontSize="{DynamicResource TSize_i8}"
                                                    TextColor="{DynamicResource TextAndBackgroundColor_i1}" />

                                            </Grid>


                                            <BoxView
                                                Grid.Row="1"
                                                BackgroundColor="{DynamicResource TextAndBackgroundColor_i5}" />
                                        </Grid>

                                    </DataTemplate>

                                </CollectionView.ItemTemplate>

                            </CollectionView>

                        </RefreshView>

                    </StackLayout>

                </Frame>

            </Grid>

            <StackLayout
                VerticalOptions="EndAndExpand"
                BackgroundColor="{DynamicResource TextAndBackgroundColor_i3}"
                IsVisible="{Binding SelectedOrder, Converter={xct:IsNotNullOrEmptyConverter}}">

                <BoxView
                    BackgroundColor="{DynamicResource TextAndBackgroundColor_i2}"
                    HeightRequest="2"
                    VerticalOptions="StartAndExpand" />

                <StackLayout
                    Margin="20,15,20,15"
                    Spacing="20">

                    <controls:CustomButton
                        CornerRadius="5"
                        Text="{xct:Translate Print}"
                        TextColor="{DynamicResource TextAndBackgroundColor_i3}"
                        BorderColor="{DynamicResource IndicationColor_i1}"
                        BackColor="{DynamicResource IndicationColor_i1}" />

                    <StackLayout
                        Orientation="Horizontal"
                        Spacing="10">

                        <controls:CustomButton
                            HorizontalOptions="FillAndExpand"
                            Text="{xct:Translate Edit}"
                            TextColor="{DynamicResource TextAndBackgroundColor_i1}"
                            BorderColor="{DynamicResource IndicationColor_i5}"
                            BackColor="Transparent"
                            CornerRadius="5" />

                        <controls:CustomButton
                            HorizontalOptions="FillAndExpand"
                            Text="{xct:Translate Split}"
                            TextColor="{DynamicResource TextAndBackgroundColor_i1}"
                            BorderColor="{DynamicResource IndicationColor_i7}"
                            BackColor="Transparent"
                            IsVisible="{Binding IsOrderTabsSelected}"
                            CornerRadius="5" />

                        <controls:CustomButton
                            HorizontalOptions="FillAndExpand"
                            Text="{xct:Translate Remove}"
                            TextColor="{DynamicResource TextAndBackgroundColor_i1}"
                            BorderColor="{DynamicResource IndicationColor_i3}"
                            BackColor="Transparent"
                            CornerRadius="5" />

                    </StackLayout>

                </StackLayout>

            </StackLayout>

        </StackLayout>

    </ContentPage.Content>

</views:BaseContentPage>