<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Next2.Views.Mobile.LoginPage">
    <ContentPage.Content>
        <Grid RowSpacing="0"
              RowDefinitions="auto"
              BackgroundColor="{DynamicResource textAndbackgroundcolor_i2}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.33*"/>
            </Grid.ColumnDefinitions>

            <StackLayout Orientation="Horizontal"
                         HeightRequest="90"
                         HorizontalOptions="Fill"
                         BackgroundColor="#2E3143"
                         Grid.Column="0"
                         Padding="0">

                <Label Text="Welcome"
                       FontSize="30"
                       VerticalOptions="Center"
                       Margin="40, 0, 0, 0"
                       TextColor="{DynamicResource textAndbackgroundcolor_i1}"
                       Style="{DynamicResource BaseContent_i2}"/>

                <Image Source="ic_time_circle_24x24"
                       VerticalOptions="Center"
                       Scale="0.8"
                       HorizontalOptions="EndAndExpand"/>

                <Label Text="9:32:45 PM" 
                       VerticalOptions="Center"
                       FontSize="14"
                       Margin="0, 0, 25, 0"
                       TextColor="{DynamicResource textAndbackgroundcolor_i1}"
                       Style="{DynamicResource BaseContent_i4}"/>

                <Image Source="ic_calendar_24x24"
                       Scale="0.8"/>

                <Label Text="Tuesday, 21 March 2021" 
                       VerticalOptions="Center"
                       Margin="0, 0, 40, 0"
                       FontSize="14"
                       Style="{DynamicResource BaseContent_i4}"
                       TextColor="{DynamicResource textAndbackgroundcolor_i1}"/>
                
            </StackLayout>
            
            <StackLayout Grid.Column="0"
                         Grid.Row="1"
                         Orientation="Vertical"
                         Padding="0"
                         BackgroundColor="{DynamicResource textAndbackgroundcolor_i4}">

                <Image Source="pic_logo_big" 
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Scale="0.8"/>

            </StackLayout>

            <StackLayout Grid.Column="1"
                         Grid.RowSpan="2"
                         Orientation="Vertical"
                         BackgroundColor="{DynamicResource textAndbackgroundcolor_i3}">
                
                <Label Text="Employee ID"
                       Style="{DynamicResource BaseContent_i1}"
                       FontSize="24"
                       HeightRequest="35"
                       Margin="40, 240, 0, 0"
                       TextColor="{DynamicResource textAndbackgroundcolor_i1}">
                    
                    
                </Label>

                <Frame Margin="40, 0, 40, 0"
                       CornerRadius="8"
                       Padding="0"
                       HasShadow="False"
                       BorderColor="{DynamicResource textAndbackgroundcolor_i2}">
                    
                    <Frame BackgroundColor="{DynamicResource textAndbackgroundcolor_i3}"
                           BorderColor="{DynamicResource textAndbackgroundcolor_i3}"
                           Padding="0"
                           HeightRequest="50"
                           Margin="1"
                           CornerRadius="8"
                           HasShadow="False">

                        <Label Text="Type Employee ID"
                               Style="{DynamicResource BaseContent_i4}"
                               Margin="15, 8, 0, 8"
                               FontSize="24">
                        </Label>

                    </Frame>
                </Frame>
                
            </StackLayout>
    
        </Grid>
    </ContentPage.Content>
</ContentPage>