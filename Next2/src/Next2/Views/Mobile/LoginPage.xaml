<?xml version="1.0" encoding="utf-8" ?>
<views:BaseContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Next2.Views"
    xmlns:controls="clr-namespace:Next2.Controls" 
    xmlns:viewModels="clr-namespace:Next2.ViewModels"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    x:Class="Next2.Views.Mobile.LoginPage"
    x:DataType="viewModels:LoginPageViewModel"
    BackgroundColor="{DynamicResource TextAndBackgroundColor_i3}" >

    <StackLayout 
        BackgroundColor="{DynamicResource TextAndBackgroundColor_i3}" 
        Spacing="0" 
        Padding="0"> 

        <Label 
            Text="{xct:Translate Login}"
            FontSize="{DynamicResource TSize_i6}"
            HeightRequest="50"
            Margin="16, 0, 0, 0"
            VerticalTextAlignment="Center"
            BackgroundColor="{DynamicResource TextAndBackgroundColor_i3}"
            TextColor="{DynamicResource TextAndBackgroundColor_i1}"
            FontFamily="Barlow-Bold"/>

        <Grid 
            ColumnDefinitions="0.5*,0.5*"
            RowDefinitions="45"
            ColumnSpacing="1">
            
            <StackLayout 
                Grid.Column="0"
                Spacing="0"
                HorizontalOptions="FillAndExpand"
                BackgroundColor="{DynamicResource TextAndBackgroundColor_i3}">
                
                <Label 
                    Text="{xct:Translate Employee}"
                    HeightRequest="45"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center"
                    FontSize="{DynamicResource TSize_i8}"
                    TextColor="{DynamicResource TextAndBackgroundColor_i1}"
                    FontFamily="Barlow-SemiBold"/>

                <BoxView 
                    HeightRequest="3"
                    BackgroundColor="{DynamicResource TextAndBackgroundColor_i2}">
                </BoxView>

            </StackLayout>

            <StackLayout 
                Grid.Column="1"
                Spacing="0"
                HorizontalOptions="FillAndExpand"
                BackgroundColor="{DynamicResource AppColor_i4}">
                
                <Label 
                    Text="{xct:Translate Waiter}"
                    HeightRequest="45"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center"
                    FontSize="{DynamicResource TSize_i8}"
                    TextColor="{DynamicResource TextAndBackgroundColor_i1}"
                    FontFamily="Barlow-SemiBold"/>

                <BoxView 
                    HeightRequest="3"
                    BackgroundColor="{DynamicResource AppColor_i1}"/>

            </StackLayout>
            
        </Grid>

        <StackLayout 
            Orientation="Vertical"
            VerticalOptions="FillAndExpand"
            Padding="0"
            BackgroundColor="{DynamicResource TextAndBackgroundColor_i10}">
            
            <Image 
                Source="pic_logo_rectangular"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Scale="0.45"/>

            <Label 
                Text="{xct:Translate EmployeeId}"
                FontSize="{DynamicResource TSize_i8}"
                Margin="18, 0, 0, 8"
                TextColor="{DynamicResource TextAndBackgroundColor_i1}"
                FontFamily="Barlow-Regular"/>

            <controls:CustomFrame 
                Margin="16, 0, 16, 0"
                CornerRadius="{OnPlatform Android='5', iOS='8'}"
                Padding="4"
                BorderWidth="1"
                HeightRequest="30"
                HasShadow="False"
                BorderColor="{DynamicResource TextAndBackgroundColor_i2}"
                BackgroundColor="{DynamicResource TextAndBackgroundColor_i3}">

                <StackLayout Orientation="Horizontal">

                    <Label 
                        x:Name="employeeID"
                        Text="{Binding EmployeeId, Mode=TwoWay}"
                        FontSize="{DynamicResource TSize_i8}"
                        VerticalTextAlignment="Center"
                        TextColor="{DynamicResource TextAndBackgroundColor_i9}"
                        Margin="4, 0, 0, 0"
                        FontFamily="Barlow-Medium">

                        <Label.Triggers>

                            <DataTrigger
                                TargetType="Label"
                                Binding="{Binding IsEmployeeIdProvided, Mode=TwoWay}"
                                Value="True">

                                <Setter 
                                    Property="TextColor"
                                    Value="{DynamicResource TextAndBackgroundColor_i1}"/>

                            </DataTrigger>

                        </Label.Triggers>

                    </Label>
                        
                    <Image 
                        Source="ic_danger_circle"
                        IsVisible="{Binding IsErrorNotificationVisible}"
                        Scale="0.6"
                        HorizontalOptions="EndAndExpand"/>

                </StackLayout>
                
                <controls:CustomFrame.GestureRecognizers>

                    <TapGestureRecognizer Command="{Binding GoToEmployeeIdPage}"/>

                </controls:CustomFrame.GestureRecognizers>

                <controls:CustomFrame.Triggers>

                    <DataTrigger 
                        
                        TargetType="controls:CustomFrame"
                        Binding="{Binding IsErrorNotificationVisible}"                                        
                        Value="True">
                        
                        <Setter 
                            Property="BorderColor"
                            Value="{DynamicResource IndicationColor_i3}"/>

                    </DataTrigger>

                </controls:CustomFrame.Triggers>

            </controls:CustomFrame>

            <StackLayout 
                Orientation="Horizontal"
                VerticalOptions="EndAndExpand"
                Spacing="11"
                BackgroundColor="{DynamicResource TextAndBackgroundColor_i3}"
                HeightRequest="65">

                <StackLayout 
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="Center"
                    HeightRequest="40">

                    <controls:CustomFrame 
                        x:Name="customFrame"
                        Margin="16, 0, 0, 0"
                        CornerRadius="{OnPlatform Android='5', iOS='8'}"
                        Padding="4"
                        IsEnabled="False"
                        BorderWidth="1"
                        HasShadow="False"
                        BorderColor="{DynamicResource IndicationColor_i4}"
                        BackgroundColor="{DynamicResource TextAndBackgroundColor_i3}">

                        <Label 
                            Text="{xct:Translate Clear}"
                            FontSize="{DynamicResource TSize_i7}"
                            HeightRequest="65"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Center"
                            TextColor="{DynamicResource TextAndBackgroundColor_i7}"
                            FontFamily="Barlow-SemiBold">
                            
                            <Label.Triggers> 
                                
                                <DataTrigger 
                                    TargetType="Label"
                                    Binding="{Binding IsClearButtonEnabled}"                           
                                    Value="True">

                                    <Setter Property="TextColor" Value="{DynamicResource TextAndBackgroundColor_i1}"/>
                                    
                                </DataTrigger>
                                
                            </Label.Triggers>
                            
                        </Label>
                        
                        <controls:CustomFrame.Triggers>

                            <DataTrigger 
                                TargetType="controls:CustomFrame"
                                Binding="{Binding IsClearButtonEnabled}"                                        
                                Value="True">

                                <Setter 
                                    Property="BorderColor"
                                    Value="{DynamicResource IndicationColor_i3}"/>

                            </DataTrigger>

                            <DataTrigger 
                                
                                TargetType="controls:CustomFrame"
                                Binding="{Binding IsClearButtonEnabled}"                                         
                                Value="True">
                                
                                <Setter 
                                    Property="IsEnabled"
                                    Value="True"/>

                            </DataTrigger>

                        </controls:CustomFrame.Triggers>
                        
                        <controls:CustomFrame.GestureRecognizers>

                            <TapGestureRecognizer Command="{Binding ButtonClearCommand}"/>
                            
                        </controls:CustomFrame.GestureRecognizers>

                    </controls:CustomFrame>

                </StackLayout>

                <StackLayout 
                    HorizontalOptions="FillAndExpand"
                    HeightRequest="40"
                    VerticalOptions="Center">

                    <controls:CustomFrame 
                        Margin="0, 0, 16, 0"
                        CornerRadius="{OnPlatform Android='5', iOS='8'}"
                        Padding="4"
                        IsEnabled="False"
                        BorderWidth="0"
                        HeightRequest="65"
                        HasShadow="False"
                        BorderColor="Transparent"
                        BackgroundColor="{DynamicResource IndicationColor_i2}">

                        <Label
                            Text="{xct:Translate Login}"
                            FontSize="{DynamicResource TSize_i8}"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Center"
                            TextColor="{DynamicResource TextAndBackgroundColor_i3}"
                            FontFamily="Barlow-SemiBold"/>

                        <controls:CustomFrame.Triggers>

                            <DataTrigger 
                                TargetType="controls:CustomFrame"
                                Binding="{Binding IsLoginButtonEnabled }"                                        
                                Value="True">
                                
                                <Setter 
                                    Property="BackgroundColor"
                                    Value="{DynamicResource IndicationColor_i1}"/>
                               
                            </DataTrigger>
                            
                            <DataTrigger 
                                TargetType="controls:CustomFrame"
                                Binding="{Binding IsLoginButtonEnabled}"                                        
                                Value="True">

                                <Setter   
                                    Property="IsEnabled"
                                    Value="True"/>

                            </DataTrigger>


                        </controls:CustomFrame.Triggers>
                        
                        <controls:CustomFrame.GestureRecognizers>

                            <TapGestureRecognizer Command="{Binding GoToStartPageCommand}"/>

                        </controls:CustomFrame.GestureRecognizers>

                    </controls:CustomFrame>

                </StackLayout>

            </StackLayout>

        </StackLayout>

    </StackLayout>

</views:BaseContentPage>