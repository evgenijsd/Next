<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Next2.Views.Mobile.LoginPage">
    <ContentPage.Content>
        <Grid RowSpacing="0"
              RowDefinitions="auto">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.33*"/>
            </Grid.ColumnDefinitions>

            <StackLayout Orientation="Horizontal"
                         HeightRequest="90"
                         HorizontalOptions="Fill"
                         BackgroundColor="#2E3143"
                         Grid.Column="0"
                         Padding="0">

                <Label Text="Welcome"
                       FontSize="30"
                       VerticalOptions="Center"
                       Margin="40, 0, 0, 0"
                       TextColor="{DynamicResource textAndbackgroundcolor_i1}"
                       Style="{DynamicResource BaseContent_i2}"/>

                <Image Source="ic_time_circle_24x24"
                       VerticalOptions="Center"
                       Scale="0.8"
                       HorizontalOptions="EndAndExpand"/>

                <Label Text="9:32:45 PM" 
                       VerticalOptions="Center"
                       FontSize="14"
                       Margin="0, 0, 25, 0"
                       TextColor="{DynamicResource textAndbackgroundcolor_i1}"
                       Style="{DynamicResource BaseContent_i4}"/>

                <Image Source="ic_calendar_24x24"
                       Scale="0.8"/>

                <Label Text="Tuesday, 21 March 2021" 
                       VerticalOptions="Center"
                       Margin="0, 0, 40, 0"
                       FontSize="14"
                       Style="{DynamicResource BaseContent_i4}"
                       TextColor="{DynamicResource textAndbackgroundcolor_i1}"/>
                
            </StackLayout>
            
            <StackLayout Grid.Column="0"
                         Grid.Row="1"
                         Orientation="Vertical"
                         Padding="0"
                         BackgroundColor="{DynamicResource textAndbackgroundcolor_i4}">

                <Image Source="pic_logo_big" 
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Scale="0.8"/>

            </StackLayout>
    




            <!--<Label Grid.Column="1" 
                   Grid.Row="0"
                   Text="Employee ID"/>

            <Label Grid.Column="1"
                   Grid.Row="1"
                   Text="Test"/>-->

        </Grid>
    </ContentPage.Content>
</ContentPage>