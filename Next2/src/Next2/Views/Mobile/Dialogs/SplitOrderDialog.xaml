<?xml version="1.0" encoding="utf-8" ?>
<!--  MOBILE  -->
<rg:PopupPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:rg="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
    xmlns:dialogs="clr-namespace:Next2.ViewModels.Dialogs"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:models="clr-namespace:Next2.Models.Bindables"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    xmlns:local="clr-namespace:Next2"
    xmlns:enums="clr-namespace:Next2.Enums"
    xmlns:sc="clr-namespace:Next2.Controls.StateContainer"
    xmlns:effects="clr-namespace:Next2.Effects"
    xmlns:controls="clr-namespace:Next2.Controls"
    x:Class="Next2.Views.Mobile.Dialogs.SplitOrderDialog"
    x:DataType="dialogs:SplitOrderDialogViewModel">

    <rg:PopupPage.Resources>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{DynamicResource TextAndBackgroundColor_i1}" />
            <Setter Property="FontFamily" Value="Barlow-SemiBold" />

        </Style>

    </rg:PopupPage.Resources>

    <Frame
        CornerRadius="8"
        Margin="24, 32"
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand"
        BackgroundColor="{DynamicResource TextAndBackgroundColor_i3}"
        BorderColor="{DynamicResource TextAndBackgroundColor_i2}">

        <Grid RowDefinitions="0.1*, 0.79*, 0.11*">

            <!--  header  -->
            <Label
                Grid.Row="0"
                VerticalOptions="Center"
                HorizontalTextAlignment="Start"
                Margin="24, 0, 0, 0"
                FontFamily="Barlow-Bold"
                Text="{Binding HeaderText}" />

            <BoxView
                Grid.Row="0"
                HeightRequest="2"
                VerticalOptions="EndAndExpand"
                Margin="2, 0"
                BackgroundColor="{DynamicResource TextAndBackgroundColor_i6}" />

            <!--  body  -->
            <sc:StateContainer
                Grid.Row="1"
                State="{Binding Step}">

                <sc:StateCondition State="First">

                    <Frame
                        Grid.Row="1"
                        Margin="2, 0"
                        BackgroundColor="{DynamicResource TextAndBackgroundColor_i4}">

                        <CollectionView
                            x:Name="collection"
                            Grid.Row="1"
                            ItemsSource="{Binding Seats}"
                            SelectedItems="{Binding SelectedSeats}"
                            SelectionMode="Multiple"
                            SelectionChangedCommand="{Binding SelectCommand}"
                            SelectionChangedCommandParameter="{Reference collection}"
                            VerticalScrollBarVisibility="Never"
                            Margin="18"
                            BackgroundColor="{DynamicResource TextAndBackgroundColor_i4}">

                            <CollectionView.Effects>
                                <effects:NoOverScrollEffect />
                            </CollectionView.Effects>

                            <CollectionView.Header>
                                <Label Text="{xct:Translate Seats}" />
                            </CollectionView.Header>

                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout
                                    Orientation="Vertical"
                                    ItemSpacing="9" />
                            </CollectionView.ItemsLayout>

                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:SeatBindableModel">

                                    <StackLayout BackgroundColor="{DynamicResource TextAndBackgroundColor_i4}">
                                        <Frame
                                            x:Name="frame"
                                            BackgroundColor="{DynamicResource TextAndBackgroundColor_i4}"
                                            BorderColor="{DynamicResource TextAndBackgroundColor_i2}"
                                            CornerRadius="8"
                                            Padding="18"
                                            HeightRequest="50">

                                            <StackLayout Orientation="Horizontal">
                                                <StackLayout
                                                    HorizontalOptions="Start"
                                                    VerticalOptions="Center"
                                                    Spacing="6">

                                                    <Label Text="{Binding SeatNumber}">

                                                        <Label.FormattedText>
                                                            <FormattedString>
                                                                <Span Text="Seat " />
                                                                <Span Text="{Binding SeatNumber}" />
                                                            </FormattedString>
                                                        </Label.FormattedText>

                                                    </Label>

                                                    <Label>

                                                        <Label.FormattedText>
                                                            <FormattedString>
                                                                <Span Text="$ " />
                                                                <Span Text="{Binding SelectedItem.TotalPrice, StringFormat={Static local:Constants+Formats.PRICE_FORMAT}}" />
                                                            </FormattedString>
                                                        </Label.FormattedText>

                                                    </Label>

                                                </StackLayout>

                                                <ffimageloading:CachedImage
                                                    x:Name="checkBox"
                                                    Source="ic_check_box_unhecked_24x24"
                                                    HorizontalOptions="EndAndExpand"
                                                    VerticalOptions="Start" />

                                            </StackLayout>

                                        </Frame>

                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup Name="CommonStates">

                                                <VisualState Name="Selected">

                                                    <VisualState.Setters>
                                                        <Setter TargetName="frame" Property="Frame.BorderColor" Value="{DynamicResource AppColor_i1}" />
                                                        <Setter TargetName="checkBox" Property="ffimageloading:CachedImage.Source" Value="ic_check_box_checked_white.png" />
                                                    </VisualState.Setters>

                                                </VisualState>

                                                <VisualState Name="Normal">

                                                    <VisualState.Setters>
                                                        <Setter TargetName="frame" Property="Frame.BorderColor" Value="{DynamicResource TextAndBackgroundColor_i2}" />
                                                        <Setter TargetName="checkBox" Property="ffimageloading:CachedImage.Source" Value="ic_check_box_unhecked_24x24.png" />
                                                    </VisualState.Setters>

                                                </VisualState>

                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                    </StackLayout>

                                </DataTemplate>
                            </CollectionView.ItemTemplate>

                        </CollectionView>

                    </Frame>

                </sc:StateCondition>

                <sc:StateCondition State="Second">

                    <sc:StateContainer State="{Binding Condition}">

                        <sc:StateCondition State="{Static enums:ESplitOrderConditions.ByPercents}">

                            <Grid
                                Padding="24"
                                MinimumHeightRequest="623">

                                <!--  values  -->
                                <StackLayout
                                    Grid.Row="0"
                                    Spacing="12">

                                    <Label
                                        Text="Select Value"
                                        FontSize="{DynamicResource TSize_i8}"
                                        FontFamily="Barlow-SemiBold" />

                                    <StackLayout
                                        Spacing="12"
                                        Orientation="Horizontal">

                                        <Frame
                                            WidthRequest="139"
                                            HeightRequest="51"
                                            BackgroundColor="{DynamicResource TextAndBackgroundColor_i2}"
                                            xct:TouchEffect.Command="{Binding SelectValueCommand}"
                                            xct:TouchEffect.CommandParameter="25">
                                            <Label
                                                Text="25 %"
                                                VerticalTextAlignment="Center"
                                                HorizontalTextAlignment="Center" />
                                        </Frame>

                                        <Frame
                                            BackgroundColor="{DynamicResource TextAndBackgroundColor_i2}"
                                            WidthRequest="139"
                                            HeightRequest="51"
                                            xct:TouchEffect.Command="{Binding SelectValueCommand}"
                                            xct:TouchEffect.CommandParameter="50">
                                            <Label
                                                Text="50 %"
                                                VerticalTextAlignment="Center"
                                                HorizontalTextAlignment="Center" />
                                        </Frame>

                                        <Frame
                                            BackgroundColor="{DynamicResource TextAndBackgroundColor_i2}"
                                            WidthRequest="139"
                                            HeightRequest="51"
                                            xct:TouchEffect.Command="{Binding SelectValueCommand}"
                                            xct:TouchEffect.CommandParameter="75">
                                            <Label
                                                Text="75 %"
                                                VerticalTextAlignment="Center"
                                                HorizontalTextAlignment="Center" />
                                        </Frame>

                                    </StackLayout>

                                </StackLayout>

                                <!--  stepper  -->
                                <StackLayout
                                    Grid.Row="1"
                                    Orientation="Horizontal"
                                    HorizontalOptions="CenterAndExpand"
                                    Padding="18, 0"
                                    Spacing="26">

                                    <ffimageloading:CachedImage
                                        Source="ic_minus_primary_32x32.png"
                                        VerticalOptions="CenterAndExpand"
                                        HeightRequest="53"
                                        WidthRequest="53"
                                        xct:TouchEffect.Command="{Binding DecrementCommand}" />

                                    <Label
                                        Text="{Binding SplitValue, StringFormat={Static local:Constants+Formats.PERCENT_FORMAT}}"
                                        HorizontalTextAlignment="Center"
                                        VerticalOptions="CenterAndExpand"
                                        FontFamily="Barlow-Bold"
                                        Margin="0, 0, 0, 8"
                                        WidthRequest="92"
                                        FontSize="36" />

                                    <ffimageloading:CachedImage
                                        Source="ic_plus_primary_32x32.png"
                                        VerticalOptions="CenterAndExpand"
                                        HeightRequest="53"
                                        WidthRequest="53"
                                        xct:TouchEffect.Command="{Binding IncrementCommand}" />

                                </StackLayout>

                                <!--  split total  -->
                                <BoxView
                                    Grid.Row="2"
                                    BackgroundColor="{DynamicResource TextAndBackgroundColor_i2}"
                                    HeightRequest="1"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="Start" />

                                <StackLayout
                                    Grid.Row="2"
                                    Orientation="Horizontal"
                                    Padding="0, 18, 0, 0">

                                    <Label
                                        HorizontalOptions="Start"
                                        VerticalOptions="Start"
                                        Text="Split Total"
                                        FontFamily="Barlow-SemiBold"
                                        FontSize="{DynamicResource TSize_i6}" />

                                    <Label
                                        HorizontalOptions="EndAndExpand"
                                        VerticalOptions="Start"
                                        TextColor="{DynamicResource IndicationColor_i1}"
                                        FontFamily="Barlow-SemiBold"
                                        FontSize="{DynamicResource TSize_i6}">

                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="$ " />
                                                <Span Text="{Binding SplitTotal, StringFormat={Static local:Constants+Formats.PRICE_FORMAT}}" />
                                            </FormattedString>
                                        </Label.FormattedText>

                                    </Label>

                                </StackLayout>

                            </Grid>

                        </sc:StateCondition>

                        <sc:StateCondition State="{Static enums:ESplitOrderConditions.ByDollar}">

                            <controls:NumericKeyboard
                                Margin="18, 18"
                                PlaceHolder="{xct:Translate SetValue}"
                                VerticalOptions="Fill"
                                HorizontalOptions="Fill"
                                IsTextRightToLeft="True"
                                MaxValue="{Binding SelectedDish.TotalPrice}"
                                Value="{Binding SplitValue, Mode=TwoWay}"
                                ValueFormat="{Static local:Constants+Formats.CASH_FORMAT}"
                                BackgroundColorButton="{DynamicResource TextAndBackgroundColor_i3}" />

                        </sc:StateCondition>

                    </sc:StateContainer>

                </sc:StateCondition>

            </sc:StateContainer>



            <!--  Buttons  -->
            <BoxView
                Grid.Row="2"
                HeightRequest="2"
                VerticalOptions="StartAndExpand"
                BackgroundColor="{DynamicResource TextAndBackgroundColor_i2}" />

            <StackLayout
                Orientation="Horizontal"
                Spacing="12"
                Padding="12"
                Grid.Row="2">

                <Frame
                    BorderColor="{DynamicResource AppColor_i1}"
                    Padding="0"
                    VerticalOptions="FillAndExpand"
                    CornerRadius="5"
                    BackgroundColor="{DynamicResource TextAndBackgroundColor_i3}"
                    xct:TouchEffect.Command="{Binding CancelCommand}"
                    HorizontalOptions="FillAndExpand">

                    <Frame.Triggers>
                        
                        <DataTrigger TargetType="Frame" Binding="{Binding Step}" Value="Second">
                            <Setter Property="xct:TouchEffect.Command" Value="{Binding SkipCommand}" />

                        </DataTrigger>

                    </Frame.Triggers>

                    <Label
                        Text="{xct:Translate Cancel}"
                        FontSize="{DynamicResource TSize_i4_5}"
                        VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Center" />

                </Frame>

                <Frame
                    Padding="0"
                    VerticalOptions="FillAndExpand"
                    BackgroundColor="{DynamicResource TextAndBackgroundColor_i3}"
                    BorderColor="{DynamicResource IndicationColor_i1}"
                    Opacity="{DynamicResource OpacityWhenDisabled_i1}"
                    CornerRadius="5"
                    xct:TouchEffect.Command="{Binding NextCommand}"
                    HorizontalOptions="FillAndExpand">

                    <StackLayout
                        Orientation="Horizontal"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Spacing="16">

                        <Label
                            Text="{xct:Translate Next}"
                            FontSize="{DynamicResource TSize_i4_5}">

                            <Label.Triggers>
                                <DataTrigger TargetType="Label" Binding="{Binding Step}" Value="Second">
                                    <Setter Property="Text" Value="{xct:Translate Split}" />
                                    <Setter Property="TextColor" Value="{DynamicResource TextAndBackgroundColor_i6}"/>

                                </DataTrigger>

                                <DataTrigger TargetType="Label" Binding="{Binding Condition}" Value="{Static enums:ESplitOrderConditions.BySeats}">
                                    <Setter Property="Text" Value="{xct:Translate Split}" />
                                    <Setter Property="TextColor" Value="{DynamicResource TextAndBackgroundColor_i6}"/>

                                </DataTrigger>
                                
                            </Label.Triggers>

                        </Label>

                        <Image Source="ic_arrow_right_24x24.png">

                            <Image.Triggers>
                                <DataTrigger TargetType="Image" Binding="{Binding Step}" Value="Second">
                                    <Setter Property="IsVisible" Value="false" />

                                </DataTrigger>

                                <DataTrigger TargetType="Image" Binding="{Binding Condition}" Value="{Static enums:ESplitOrderConditions.BySeats}">
                                    <Setter Property="IsVisible" Value="false" />

                                </DataTrigger>

                            </Image.Triggers>

                        </Image>

                    </StackLayout>

                    <Frame.Triggers>
                        <DataTrigger TargetType="Frame" Binding="{Binding IsSplitAvailable}" Value="true">
                            <Setter Property="Opacity" Value="1" />

                        </DataTrigger>

                        <DataTrigger TargetType="Frame" Binding="{Binding Step}" Value="Second">
                            <Setter Property="BorderColor" Value="{DynamicResource IndicationColor_i1}" />
                            <Setter Property="BackgroundColor" Value="{DynamicResource IndicationColor_i1}" />
                            <Setter Property="xct:TouchEffect.Command" Value="{Binding SplitCommand}" />

                        </DataTrigger>

                        <DataTrigger TargetType="Frame" Binding="{Binding Condition}" Value="{Static enums:ESplitOrderConditions.BySeats}">
                            <Setter Property="BorderColor" Value="{DynamicResource IndicationColor_i1}" />
                            <Setter Property="BackgroundColor" Value="{DynamicResource IndicationColor_i1}" />
                            <Setter Property="xct:TouchEffect.Command" Value="{Binding SplitCommand}" />

                        </DataTrigger>


                    </Frame.Triggers>

                </Frame>

            </StackLayout>

        </Grid>

    </Frame>



</rg:PopupPage>