<?xml version="1.0" encoding="UTF-8"?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:controls="clr-namespace:Next2.Controls"
    xmlns:buttons="clr-namespace:Next2.Controls.Buttons"
    xmlns:effects="clr-namespace:Next2.Effects"
    xmlns:helpers="clr-namespace:Next2.Helpers"
    xmlns:viewmodels="clr-namespace:Next2.ViewModels"
    x:Class="Next2.Views.Mobile.PaymentCompleteView"
    x:DataType="viewmodels:PaymentCompleteViewModel">

    <ContentView.Resources>

        <ResourceDictionary>

            <Style x:Key="SummaryItem" TargetType="Label">
                <Setter Property="TextColor" Value="{DynamicResource TextAndBackgroundColor_i1}" />
                <Setter Property="VerticalTextAlignment" Value="Center" />
                <Setter Property="FontFamily" Value="Barlow-Medium" />
                <Setter Property="FontSize" Value="{DynamicResource TSize_i6}" />
                <Setter Property="Margin" Value="0, 2" />
            </Style>

        </ResourceDictionary>

    </ContentView.Resources>

    <Grid BackgroundColor="{DynamicResource TextAndBackgroundColor_i5}">

        <CollectionView
            Grid.Row="0"
            Margin="12, 10, 12, 16"
            VerticalOptions="Start"
            ItemsSource="{Binding PaymentOptionsItems}">

            <CollectionView.ItemsLayout>

                <GridItemsLayout
                    Orientation="Vertical"
                    Span="1"
                    VerticalItemSpacing="8"
                    HorizontalItemSpacing="0"/>

            </CollectionView.ItemsLayout>

            <CollectionView.Effects>
                <effects:NoOverScrollEffect/>
            </CollectionView.Effects>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="helpers:PaymentItem">

                    <controls:CustomFrame
                        Padding="0, 15"
                        BorderWidth="1"
                        BackgroundColor="{DynamicResource TextAndBackgroundColor_i4}"
                        BorderColor="{DynamicResource TextAndBackgroundColor_i2}" 
                        CornerRadius="{OnPlatform Android='5', iOS='8'}"
                        xct:TouchEffect.Command="{Binding TapCommand}"
                        xct:TouchEffect.CommandParameter="{Binding .}">

                        <StackLayout Orientation="Horizontal">

                            <Label
                                Text="{Binding Text}"
                                TextColor="{DynamicResource TextAndBackgroundColor_i1}"
                                VerticalTextAlignment="Center"
                                FontSize="{DynamicResource TSize_i7}"
                                FontFamily="Barlow-Medium"
                                Margin="15, 0, 0, 0"
                                HorizontalOptions="FillAndExpand"/>

                            <ffimageloading:CachedImage 
                                Source="ic_arrow_right_40x40"
                                HeightRequest="24"
                                HorizontalOptions="End"
                                Margin="0, 0, 15, 0"/>

                        </StackLayout>

                    </controls:CustomFrame>

                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

        <StackLayout
            Grid.Row="0"
            VerticalOptions="End"
            BackgroundColor="{DynamicResource TextAndBackgroundColor_i3}">

            <xct:Expander
                IsExpanded="{Binding IsExpandedSummary}">

                <xct:Expander.Header>

                    <StackLayout>

                        <BoxView
                            BackgroundColor="{DynamicResource TextAndBackgroundColor_i2}"
                            HeightRequest="1"/>

                        <StackLayout
                            Orientation="Horizontal"
                            Margin="15, 7">

                            <Label
                                Text="Summary"
                                TextColor="{DynamicResource TextAndBackgroundColor_i1}"
                                FontSize="{DynamicResource TSize_i4}"
                                FontFamily="Barlow-Bold"/>

                            <ffimageloading:CachedImage
                                Source="ic_arrow_up_24x24.png"
                                HorizontalOptions="EndAndExpand"
                                VerticalOptions="Center">

                                <ffimageloading:CachedImage.Triggers>

                                    <DataTrigger
                                        TargetType="ffimageloading:CachedImage"
                                        Binding="{Binding IsExpandedSummary}"
                                        Value="False">

                                        <Setter Property="Source" Value="ic_arrow_down_24x24.png"/>

                                    </DataTrigger>

                                </ffimageloading:CachedImage.Triggers>

                            </ffimageloading:CachedImage>

                        </StackLayout>

                        <BoxView
                            BackgroundColor="{DynamicResource TextAndBackgroundColor_i6}"
                            HeightRequest="1"/>

                    </StackLayout>

                </xct:Expander.Header>

                <StackLayout
                    Padding="15, 10">

                    <StackLayout
                        Orientation="Horizontal">

                        <Label
                            Text="Subtotal"
                            Style="{StaticResource SummaryItem}"/>

                        <Label
                            Text="{Binding Order.Subtotal, StringFormat='$ {0:F2}'}"
                            Style="{StaticResource SummaryItem}"
                            HorizontalOptions="EndAndExpand"/>

                    </StackLayout>

                    <StackLayout
                        Orientation="Horizontal">

                        <Label
                            Text="Coupon"
                            Style="{StaticResource SummaryItem}"/>

                        <Label
                            Text="{Binding Order.Coupon, StringFormat='$ {0:F2}'}"
                            Style="{StaticResource SummaryItem}"
                            HorizontalOptions="EndAndExpand"/>

                    </StackLayout>

                    <StackLayout Orientation="Horizontal">

                        <Label
                            Text="Tax"
                            Style="{StaticResource SummaryItem}"/>

                        <Label
                            Text="{Binding Order.Tax, StringFormat='$ {0:F2}'}"
                            Style="{StaticResource SummaryItem}"
                            HorizontalOptions="EndAndExpand"/>

                    </StackLayout>

                    <StackLayout Orientation="Horizontal">

                        <Label
                            Text="Tip"
                            Style="{StaticResource SummaryItem}"/>

                        <Label
                            Text="{Binding Order.Tip, StringFormat='$ {0:F2}'}"
                            Style="{StaticResource SummaryItem}"
                            HorizontalOptions="EndAndExpand"/>

                    </StackLayout>

                    <BoxView
                        BackgroundColor="{DynamicResource TextAndBackgroundColor_i2}"
                        HeightRequest="1"
                        Margin="0, 10"/>

                    <StackLayout Orientation="Horizontal">

                        <Label
                            Text="Gift Cards"
                            Style="{StaticResource SummaryItem}"/>

                        <Label
                            Text="{Binding Order.GiftCards, StringFormat='$ {0:F2}'}"
                            Style="{StaticResource SummaryItem}"
                            HorizontalOptions="EndAndExpand"/>

                    </StackLayout>

                    <StackLayout Orientation="Horizontal">

                        <Label
                            Text="Cash"
                            Style="{StaticResource SummaryItem}"/>

                        <Label
                            Text="{Binding Order.Cash, StringFormat='$ {0:F2}'}"
                            Style="{StaticResource SummaryItem}"
                            HorizontalOptions="EndAndExpand"/>

                    </StackLayout>

                    <StackLayout Orientation="Horizontal">

                        <Label
                            Text="Change"
                            Style="{StaticResource SummaryItem}"/>

                        <Label
                            Text="{Binding Order.Change, StringFormat='$ {0:F2}'}"
                            Style="{StaticResource SummaryItem}"
                            HorizontalOptions="EndAndExpand"/>

                    </StackLayout>

                </StackLayout>

            </xct:Expander>

            <StackLayout
                Orientation="Horizontal"
                Padding="15, 5">

                <Label
                    Text="Total"
                    TextColor="{DynamicResource TextAndBackgroundColor_i1}"
                    VerticalTextAlignment="Center"
                    FontSize="{DynamicResource TSize_i4}"
                    FontFamily="Barlow-Regular"/>

                <Label
                    Text="{Binding Order.Total, StringFormat='$ {0:F2}'}"
                    TextColor="{DynamicResource TextAndBackgroundColor_i1}"
                    VerticalTextAlignment="Center"
                    HorizontalOptions="EndAndExpand"
                    FontSize="{DynamicResource TSize_i4}"
                    FontFamily="Barlow-Regular"/>

            </StackLayout>

            <buttons:BorderButton
                Grid.Column="1"
                Text="Complete"
                TextColor="{DynamicResource TextAndBackgroundColor_i3}"
                FontSize="{DynamicResource TSize_i5}"
                FontFamily="Barlow-SemiBold"
                BackgroundColor="{DynamicResource IndicationColor_i1}"
                BorderColor="{DynamicResource IndicationColor_i1}"
                CornerRadius="4"
                Padding="0, 10"
                Margin="15"/>

        </StackLayout>

    </Grid>

</ContentView>