<?xml version="1.0" encoding="utf-8" ?>
<views:BaseContentPage
    x:Class="Next2.Views.Mobile.BonusPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:buttons="clr-namespace:Next2.Controls.Buttons"
    xmlns:controls="clr-namespace:Next2.Controls"
    xmlns:enum="clr-namespace:Next2.Enums"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:local="clr-namespace:Next2"
    xmlns:models="clr-namespace:Next2.Models"
    xmlns:modelsBindable="clr-namespace:Next2.Models.Bindables"
    xmlns:prism="http://prismlibrary.com"
    xmlns:templates="clr-namespace:Next2.Controls.Templates"
    xmlns:viewModels="clr-namespace:Next2.ViewModels"
    xmlns:views="clr-namespace:Next2.Views"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    x:DataType="viewModels:BonusPageViewModel"
    BackgroundColor="{DynamicResource TextAndBackgroundColor_i5}">

    <ContentPage.Content>

        <Grid>

            <Grid IsVisible="{Binding SelectedBonus, Converter={xct:IsNullOrEmptyConverter}}" RowDefinitions="70, *">

                <controls:CustomNavigationbar
                    Title="{xct:Translate CouponsAndDiscounts}"
                    Grid.Row="0"
                    BackgroundColor="{DynamicResource TextAndBackgroundColor_i5}"
                    FontSize="{DynamicResource TSize_i5}"
                    HeightImage="24"
                    LeftButtonCommand="{prism:GoBack}" />

                <BoxView
                    Grid.Row="0"
                    HeightRequest="1"
                    VerticalOptions="End"
                    Color="{DynamicResource TextAndBackgroundColor_i2}" />

                <ScrollView Grid.Row="1" VerticalScrollBarVisibility="Never">

                    <StackLayout>

                        <Grid Margin="20,25,20,0">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="40" />
                                <RowDefinition Height="{Binding HeightCoupons}" />
                            </Grid.RowDefinitions>

                            <StackLayout Grid.Row="0" Orientation="Horizontal">

                                <Label
                                    FontFamily="Barlow-SemiBold"
                                    FontSize="{DynamicResource TSize_i5}"
                                    Text="{xct:Translate Coupons}"
                                    TextColor="{DynamicResource TextAndBackgroundColor_i1}" />

                                <ffimageloading:CachedImage
                                    Margin="0,0,0,10"
                                    HeightRequest="25"
                                    HorizontalOptions="EndAndExpand"
                                    Source="ic_arrow_up_24x24.png">

                                    <ffimageloading:CachedImage.Triggers>

                                        <DataTrigger
                                            Binding="{Binding HeightCoupons}"
                                            TargetType="ffimageloading:CachedImage"
                                            Value="0">

                                            <Setter Property="Source" Value="ic_arrow_down_24x24" />

                                        </DataTrigger>

                                    </ffimageloading:CachedImage.Triggers>

                                </ffimageloading:CachedImage>

                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding TapSelectCollapceCommand}" CommandParameter="{x:Static enum:EBonusType.Coupone}" />

                                </StackLayout.GestureRecognizers>

                            </StackLayout>

                            <CollectionView
                                Grid.Row="1"
                                ItemsSource="{Binding Coupons}"
                                SelectedItem="{Binding SelectedBonus}"
                                SelectionMode="Single">

                                <CollectionView.ItemTemplate>

                                    <DataTemplate x:DataType="models:BonusBindableModel">

                                        <templates:BonusItemTemplate
                                            BackColor="{DynamicResource TextAndBackgroundColor_i3}"
                                            BorderBonusColor="{DynamicResource TextAndBackgroundColor_i3}"
                                            HeightBonus="55"
                                            ImagePath="ic_arrow_right_24x24.png"
                                            TapSelectCommand="{Binding TapCommand}"
                                            TapSelectCommandParameter="{Binding .}"
                                            Text="{Binding Name}" />

                                    </DataTemplate>

                                </CollectionView.ItemTemplate>

                            </CollectionView>

                        </Grid>

                        <BoxView
                            Margin="0,5,0,0"
                            HeightRequest="1"
                            VerticalOptions="End"
                            Color="{DynamicResource TextAndBackgroundColor_i2}" />

                        <Grid Margin="20,15,20,0">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="40" />
                                <RowDefinition Height="{Binding HeightDiscounts}" />
                            </Grid.RowDefinitions>

                            <StackLayout Orientation="Horizontal">

                                <Label
                                    Margin="0,3,0,0"
                                    FontFamily="Barlow-SemiBold"
                                    FontSize="{DynamicResource TSize_i5}"
                                    Text="{xct:Translate Discounts}"
                                    TextColor="{DynamicResource TextAndBackgroundColor_i1}" />

                                <ffimageloading:CachedImage
                                    Margin="0,0,0,5"
                                    HeightRequest="25"
                                    HorizontalOptions="EndAndExpand"
                                    Source="ic_arrow_up_24x24">

                                    <ffimageloading:CachedImage.Triggers>

                                        <DataTrigger
                                            Binding="{Binding HeightDiscounts}"
                                            TargetType="ffimageloading:CachedImage"
                                            Value="0">

                                            <Setter Property="Source" Value="ic_arrow_down_24x24" />

                                        </DataTrigger>

                                    </ffimageloading:CachedImage.Triggers>

                                </ffimageloading:CachedImage>

                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding TapSelectCollapceCommand}" CommandParameter="{x:Static enum:EBonusType.Discount}" />

                                </StackLayout.GestureRecognizers>

                            </StackLayout>

                            <CollectionView
                                Grid.Row="1"
                                ItemsSource="{Binding Discounts}"
                                SelectedItem="{Binding SelectedBonus}"
                                SelectionMode="Single">

                                <CollectionView.ItemTemplate>

                                    <DataTemplate x:DataType="models:BonusBindableModel">

                                        <templates:BonusItemTemplate
                                            BackColor="{DynamicResource TextAndBackgroundColor_i3}"
                                            BorderBonusColor="{DynamicResource TextAndBackgroundColor_i3}"
                                            HeightBonus="55"
                                            ImagePath="ic_arrow_right_24x24.png"
                                            TapSelectCommand="{Binding TapCommand}"
                                            TapSelectCommandParameter="{Binding .}"
                                            Text="{Binding Name}" />

                                    </DataTemplate>

                                </CollectionView.ItemTemplate>

                            </CollectionView>

                        </Grid>

                        <BoxView
                            Margin="0,15,0,0"
                            HeightRequest="1"
                            VerticalOptions="End"
                            Color="{DynamicResource TextAndBackgroundColor_i2}" />

                    </StackLayout>

                </ScrollView>

            </Grid>

            <Grid IsVisible="{Binding SelectedBonus, Converter={xct:IsNotNullOrEmptyConverter}}" RowDefinitions="70, *, 75">

                <controls:CustomNavigationbar
                    Title="{Binding SelectedBonus.Name}"
                    Grid.Row="0"
                    FontSize="{DynamicResource TSize_i5}"
                    HeightImage="24"
                    LeftButtonCommand="{Binding RemoveSelectionBonusCommand}" />

                <BoxView
                    Grid.Row="0"
                    HeightRequest="2"
                    VerticalOptions="End"
                    Color="{DynamicResource TextAndBackgroundColor_i2}" />

                <ScrollView
                    Grid.Row="1"
                    Margin="20,17,20,0"
                    VerticalScrollBarVisibility="Never">

                    <StackLayout BindableLayout.ItemsSource="{Binding Seats}">
                        
                        <BindableLayout.ItemTemplate>

                            <DataTemplate x:DataType="modelsBindable:SeatBindableModel">

                                <StackLayout Margin="0,0,0,15">

                                    <Label
                                        Margin="0,0,0,20"
                                        FontFamily="Barlow-Regular"
                                        FontSize="{DynamicResource TSize_i7}"
                                        Opacity="{DynamicResource OpacityWhenDisabled_i2}"
                                        Text="{Binding SeatNumber, StringFormat='Seat {0}'}"
                                        TextColor="{DynamicResource TextAndBackgroundColor_i1}" />

                                    <StackLayout Orientation="Horizontal">

                                        <StackLayout BindableLayout.ItemsSource="{Binding SelectedDishes}" HorizontalOptions="FillAndExpand">

                                            <BindableLayout.ItemTemplate>

                                                <DataTemplate x:DataType="modelsBindable:DishBindableModel">

                                                    <StackLayout>

                                                        <StackLayout Orientation="Horizontal">

                                                            <Frame Margin="0,0,20,0" CornerRadius="5">

                                                                <ffimageloading:CachedImage
                                                                    Aspect="AspectFill"
                                                                    HeightRequest="50"
                                                                    Source="{Binding ImageSource}"
                                                                    WidthRequest="50" />

                                                            </Frame>

                                                            <StackLayout HorizontalOptions="FillAndExpand">

                                                                <Label
                                                                    FontFamily="Barlow-Medium"
                                                                    FontSize="{DynamicResource TSize_i7}"
                                                                    LineBreakMode="TailTruncation"
                                                                    Text="{Binding Name}"
                                                                    TextColor="{DynamicResource TextAndBackgroundColor_i1}" />

                                                                <Label
                                                                    Margin="0,5,0,0"
                                                                    FontFamily="Barlow-Regular"
                                                                    FontSize="{DynamicResource TSize_i7}"
                                                                    HorizontalTextAlignment="Start"
                                                                    LineBreakMode="TailTruncation"
                                                                    Opacity="{DynamicResource OpacityWhenDisabled_i2}"
                                                                    Text="{Binding Name}"
                                                                    TextColor="{DynamicResource TextAndBackgroundColor_i1}" />

                                                            </StackLayout>

                                                            <StackLayout
                                                                HorizontalOptions="EndAndExpand"
                                                                MinimumWidthRequest="80"
                                                                WidthRequest="80">

                                                                <Label
                                                                    FontFamily="Barlow-Medium"
                                                                    FontSize="{DynamicResource TSize_i7}"
                                                                    HorizontalOptions="End"
                                                                    LineBreakMode="TailTruncation"
                                                                    TextColor="{DynamicResource IndicationColor_i1}">

                                                                    <Label.FormattedText>
                                                                        <FormattedString>
                                                                            <Span Text="{xct:Translate CurrencySign}" />
                                                                            <Span Text=" " />
                                                                            <Span Text="{Binding DiscountPrice, StringFormat={Static local:Constants+Formats.PRICE_FORMAT}}" />
                                                                        </FormattedString>
                                                                    </Label.FormattedText>

                                                                </Label>

                                                                <Label
                                                                    Margin="0,5,0,0"
                                                                    FontFamily="Barlow-Medium"
                                                                    FontSize="{DynamicResource TSize_i7}"
                                                                    HorizontalOptions="End"
                                                                    LineBreakMode="TailTruncation"
                                                                    Opacity="{DynamicResource OpacityWhenDisabled_i2}"
                                                                    TextColor="{DynamicResource TextAndBackgroundColor_i1}"
                                                                    TextDecorations="Strikethrough">

                                                                    <Label.FormattedText>
                                                                        <FormattedString>
                                                                            <Span Text="{xct:Translate CurrencySign}" />
                                                                            <Span Text=" " />
                                                                            <Span Text="{Binding SelectedDishProportionPrice, StringFormat={Static local:Constants+Formats.PRICE_FORMAT}}" />
                                                                        </FormattedString>
                                                                    </Label.FormattedText>

                                                                    <Label.Triggers>

                                                                        <DataTrigger TargetType="Label" Value="0">

                                                                            <DataTrigger.Binding>
                                                                                <MultiBinding Converter="{xct:MultiMathExpressionConverter}" ConverterParameter="x0 - x1">

                                                                                    <Binding Path="SelectedDishProportionPrice" />
                                                                                    <Binding Path="DiscountPrice" />

                                                                                </MultiBinding>
                                                                            </DataTrigger.Binding>

                                                                            <Setter Property="IsVisible" Value="false" />

                                                                        </DataTrigger>

                                                                    </Label.Triggers>

                                                                </Label>

                                                            </StackLayout>

                                                        </StackLayout>

                                                        <BoxView
                                                            Margin="0,20,0,15"
                                                            HeightRequest="2"
                                                            Color="{DynamicResource TextAndBackgroundColor_i3}" />

                                                    </StackLayout>

                                                </DataTemplate>

                                            </BindableLayout.ItemTemplate>

                                        </StackLayout>

                                    </StackLayout>

                                </StackLayout>

                            </DataTemplate>

                        </BindableLayout.ItemTemplate>

                    </StackLayout>

                </ScrollView>

                <StackLayout Grid.Row="2">

                    <BoxView HeightRequest="2" Color="{DynamicResource TextAndBackgroundColor_i3}" />

                    <buttons:BorderButton
                        Margin="20,15"
                        BackgroundColor="{DynamicResource IndicationColor_i1}"
                        BorderColor="Transparent"
                        Command="{Binding ApplyBonusCommand}"
                        FontSize="{DynamicResource TSize_i5}"
                        HeightRequest="35"
                        HorizontalOptions="FillAndExpand"
                        Style="{DynamicResource BorderButtonStyle_i1}"
                        Text="{xct:Translate Apply}"
                        TextColor="{DynamicResource TextAndBackgroundColor_i3}" />

                </StackLayout>

            </Grid>

        </Grid>

    </ContentPage.Content>

</views:BaseContentPage>