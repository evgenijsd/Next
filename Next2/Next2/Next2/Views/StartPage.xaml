<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Next2.Controls"
             BackgroundColor="{DynamicResource textAndbackgroundcolor_i5}"
             x:Class="Next2.Views.StartPage">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Start Page"
                   Style="{DynamicResource BaseContent_i2}"
                   TextColor="{DynamicResource appcolor_i1}"
                   FontSize="{DynamicResource tsize_i2}"
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand" />

            <controls:CustomButtonSearch />
            
            <Button Text="Orders"
                    Command="{Binding OrderCommand}"/>
            
            <controls:CustomButtonOrderTab />


            <Button Text="Tabs"
                    Command="{Binding TabCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>