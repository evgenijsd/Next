<?xml version="1.0" encoding="utf-8" ?>
<views:BaseContentPage  xmlns="http://xamarin.com/schemas/2014/forms"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
                        xmlns:views="clr-namespace:Next2.Views" xmlns:effects="clr-namespace:Next2.Effects"
                        x:Class="Next2.Views.Tablet.MembershipPage">

    <ContentPage.Content>

        <Grid RowDefinitions="auto, auto"
              RowSpacing="0" 
              ColumnDefinitions="0.1*, *"
              ColumnSpacing="0"
              VerticalOptions="FillAndExpand"
              BackgroundColor="{DynamicResource textAndbackgroundcolor_i5}">

            <!-- TITLE BAR -->
            <StackLayout Grid.Column="1" 
                         Grid.Row="0">

                <StackLayout Grid.Row="0"
                             Padding="40, 25, 40, 20"
                             Orientation="Horizontal">
                    
                    <!-- TITLE -->
                    <Label VerticalOptions="Start"
                           Style="{DynamicResource BaseContent_i2}"
                           FontSize="{DynamicResource tsize_i3}"
                           TextColor="{DynamicResource textAndbackgroundcolor_i1}"
                           Text="{xct:Translate Membership}"/>

                    <!-- Tutorial icon -->
                    <Image Margin="0, 5, 10, 0"
                           HorizontalOptions="EndAndExpand"
                           VerticalOptions="Center"
                           WidthRequest="24"
                           HeightRequest="24"
                           Scale="1.05"
                           Source="Resources/Images/Video.png"/>

                    <Label Margin="0, 3, 5, 0"
                           Style="{DynamicResource BaseContent_i3}"
                           VerticalOptions="Center"
                           FontSize="{DynamicResource tsize_i7}"
                           TextColor="{DynamicResource textAndbackgroundcolor_i1}"
                           Text="{xct:Translate WatchTutorial}"/>
                    
                </StackLayout>

                <BoxView Grid.Row="1"
                         Style="{DynamicResource SeparatorStyle}"/>

            </StackLayout>

            <!-- SEARCH BUTTON -->
            <Grid Grid.Row="1"
                  Grid.Column="1" 
                  RowDefinitions="*"
                  ColumnDefinitions="0.45*, 0.55*, auto"
                  Margin="40, 40, 40, 25">

                <Frame Grid.Row="0"
                       VerticalOptions="Start"
                       Padding="10, 10"
                       CornerRadius="5"
                       BackgroundColor="{DynamicResource textAndbackgroundcolor_i5}"
                       BorderColor="{DynamicResource textAndbackgroundcolor_i2}">

                    <StackLayout Orientation="Horizontal">

                        <Label VerticalOptions="Center"
                               Text="{xct:Translate SearchByNameOrPhone}"
                               FontSize="{DynamicResource tsize_i7}"
                               TextColor="{DynamicResource textAndbackgroundcolor_i7}"/>

                        <Image HorizontalOptions="EndAndExpand"
                               VerticalOptions="Center"
                               Source="Resources/Images/Search.png"/>

                    </StackLayout>


                    <!-- FOR DEBUGGIN OF MEMBERS SORTING -->
                    <Frame.GestureRecognizers>

                        <TapGestureRecognizer Command="{Binding TestCommand}"/>

                    </Frame.GestureRecognizers>
                    
                </Frame>

                <!-- FOR DEBUGGIN OF MEMBERS SORTING --> 
                <!--<Label Grid.Row="0"
                       Grid.Column="1"
                       FontSize="20"
                       TextColor="Orange">

                    <Label.FormattedText>

                        <FormattedString>

                            <Span Text="{Binding CurrentMemberSorting, StringFormat='{0}-'}"/>
                            
                            <Span Text="{Binding SortingTypeMembers}"/>

                        </FormattedString>
                        
                    </Label.FormattedText>
                    
                </Label>-->

            </Grid>

            <!-- TABLE -->
            <Frame Grid.Row="2"
                   Grid.Column="1"        
                   Margin="40, 0, 40, 60"
                   VerticalOptions="Start"
                   CornerRadius="10"
                   BackgroundColor="{DynamicResource textAndbackgroundcolor_i8}">

                <StackLayout>

                    <!-- TABLE HEADER -->
                    <Grid RowDefinitions="auto"
                          ColumnDefinitions="0.29*, 0.21*, 0.25*, 0.25*"
                          BackgroundColor="{DynamicResource textAndbackgroundcolor_i3}">

                        <StackLayout Grid.Column="0"
                                     Orientation="Horizontal"
                                     BackgroundColor="Blue"
                                     Spacing="5">

                            <StackLayout.GestureRecognizers>

                                <TapGestureRecognizer Command="{Binding SortingByCustomerNameTapCommand}"/>

                            </StackLayout.GestureRecognizers>

                            <Label Style="{DynamicResource TextCell}"
                                   Text="{xct:Translate CustomerName}"/>

                            <Image Source="Resources/Images/Sort.png"/>

                        </StackLayout>

                        <Label Grid.Column="1"
                               BackgroundColor="Green"
                               Style="{DynamicResource TextCell}"
                               Text="{xct:Translate Phone}"/>

                        <StackLayout Grid.Column="2"
                                     Orientation="Horizontal"
                                     BackgroundColor="Orange"
                                     Spacing="5">

                            <StackLayout.GestureRecognizers>

                                <TapGestureRecognizer Command="{Binding SortingByMembershipStartTimeTapCommand}"/>

                            </StackLayout.GestureRecognizers>

                            <Label Style="{DynamicResource TextCell}"
                                   Text="{xct:Translate MembershipStartTime}"/>

                            <Image Source="Resources/Images/Sort.png"/>

                        </StackLayout>

                        <StackLayout Grid.Column="3"
                                     BackgroundColor="Firebrick"
                                     Orientation="Horizontal"
                                     Spacing="5">

                            <StackLayout.GestureRecognizers>

                                <TapGestureRecognizer Command="{Binding SortingByMembershipEndTimeTapCommand}"/>

                            </StackLayout.GestureRecognizers>

                            <Label Style="{DynamicResource TextCell}"
                                   Text="{xct:Translate MembershipEndTime}"/>

                            <Image Source="Resources/Images/Sort.png"/>

                        </StackLayout>

                    </Grid>

                    <BoxView Style="{DynamicResource SeparatorStyle}"
                             Color="{DynamicResource textAndbackgroundcolor_i5}"/>

                    <ListView HasUnevenRows="True"
                              SeparatorVisibility="None"
                              IsPullToRefreshEnabled="True"
                              IsRefreshing="{Binding IsMembersRefreshing}"
                              RefreshCommand="{Binding PullToRefreshMembersCommand}"
                              ItemsSource="{Binding Members}"
                              SelectedItem="{Binding SelectedMember}">

                        <ListView.Behaviors>

                            <xct:EventToCommandBehavior EventName="ItemTapped"
                                                        Command="{Binding MemberTapCommand}"/>

                        </ListView.Behaviors>

                        <ListView.Effects>
                            <effects:ScrollBarColorEffect ScrollBarColor="Red"/>
                        </ListView.Effects>

                        <!--<ListView.Header>

                        -->
