                        <ListView.ItemTemplate>

                            <DataTemplate>

                                <ViewCell>

                                    <ViewCell.View>

                                        <StackLayout>

                                            <Grid ColumnDefinitions="0.29*, 0.21*, 0.25*, 0.25*"
                                                  Margin="15"
                                                  BackgroundColor="{DynamicResource textAndbackgroundcolor_i8}">

                                                <Label Grid.Column="0"
                                                       Style="{DynamicResource TextCell}"
                                                       Text="{Binding SelectedMember, CustomerName}"/>

                                                <Label Grid.Column="1"
                                                       Style="{DynamicResource TextCell}"
                                                       Text="{Binding SelectedMember, Phone}"/>

                                                <Label Grid.Column="2"
                                                       Style="{DynamicResource TextCell}">

                                                    <Label.FormattedText>

                                                        <FormattedString>

                                                            <Span Text="{Binding SelectedMember, MembershipStartTime, StringFormat='{0:MMM dd yyyy / hh:mm tt}'}" />

                                                        </FormattedString>

                                                    </Label.FormattedText>

                                                </Label>

                                                <Label Grid.Column="3"
                                                       Style="{DynamicResource TextCell}">

                                                    <Label.FormattedText>

                                                        <FormattedString>

                                                            <Span Text="{Binding SelectedMember, MembershipEndTime, StringFormat='{0:MMM dd yyyy / hh:mm tt}'}" />

                                                        </FormattedString>

                                                    </Label.FormattedText>

                                                </Label>

                                            </Grid>

                                            <BoxView Grid.Row="1"
                                                     Style="{DynamicResource SeparatorStyle}"
                                                     Color="{DynamicResource textAndbackgroundcolor_i5}"/>

                                        </StackLayout>

                                    </ViewCell.View>

                                </ViewCell>

                            </DataTemplate>

                        </ListView.ItemTemplate>

                    </ListView>

                </StackLayout>
                
            </Frame>
            
        </Grid>
        
    </ContentPage.Content>
    
</views:BaseContentPage>